<div class="center_bg">
  <h1 class="head_title">新闻中心</h1>
  <% if @garden_news.blank? %>
    <h2>很抱歉！没有新闻信息。</h2>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th style="width:85%;">标题</th>
          <th>时间</th>
        </tr>
      </thead>
      <tbody>
        <% all_count = (((params[:page].blank? ? 1 : params[:page].to_i) - 1) * 10) + 1 %>
        <% @garden_news.each do |garden_new| %>
          <tr>
            <td><%= all_count %></td>
            <td><%= link_to garden_new.title,{:controller=>"/garden/garden_news",:action=>:show,:id=>garden_new.id},:title=>garden_new.note,:target=>"_blank" %></td>
            <td><%= garden_new.created_at.to_short_datetime %></td>
            <% all_count += 1 %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="paginate_div">
      <%= paginate @garden_news  %>
    </div>
  <% end %>
</div>