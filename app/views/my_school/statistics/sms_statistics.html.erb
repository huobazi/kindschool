<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          短信统计
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              统计
            </li>
            <li>/</li>
            <li>短信统计</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
      </ul>
    </div>
   <div class="work_list">
      <div class="stat-content">
        <div class="panel" style="width: 100%;">
          <div class="header">短信统计</div>
          <div class="inner">
            <div class="info">
              <p><span><b>短信总数量: </b></span><%= @sms_records_count.to_i %>条 &nbsp;&nbsp;&nbsp;&nbsp;<%=link_to "查看全部",sms_all_statistics_my_school_statistics_path,:class=>'blue',:style=>"color:blue;"%></p>
            </div>
            <div class="info">
              <p><span>当前月短信数: </span><%= @month_sms_records_count.to_i %>条</p>
            </div>
            <div>
              <div class="header">本月短信详细</div>
              <table>
                <th>发送人</th>
                <th style="width:40%;">发送内容</th>
                <th>短信总数</th>
                <th>发送时间</th>
                <th>操作</th>
                <%@month_sms_records.each do |month_sms|%>
                <tr>
                <td><%=month_sms.sender_name%></td>
                <td><%=month_sms.content%></td>
                <td><%=month_sms.sum_count.to_i%></td>
                <td><%=month_sms.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
                <td><%=link_to '查看更多'%></td>
                </tr>
                <%end%>
              </table>
              <div class="paginate_div">
                <%= paginate @month_sms_records %>
              </div>
          </div>
        </div>
      </div>
  </div>
</div>
</div>