<script type="text/javascript">
  jQuery(function() {
    $('#cook_book_start_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });
    $('#cook_book_end_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });
  });
</script>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>菜谱</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
         <li><%=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_cook_book_path) unless @flag.blank? %>
        </li>
      </ul>
    </div>
    <div>
     <%= form_tag '/my_school/cook_books' , :method=>"get" do %>
      <b>开始时间：</b>
      <%= text_field :cook_book,:start_at_equals,:style=>"width:100px;" ,:value=>"#{params[:cook_book][:start_at_equals] if params[:cook_book] }"  %>
      <b>结束时间：</b>
      <%= text_field :cook_book,:end_at_equals,:style=>"width:100px;" ,:value=>"#{params[:cook_book][:end_at_equals] if params[:cook_book] }"  %>
      <%= submit_tag "搜索" %>
      <%end%>
    </div>

    <div class="work_list">
        <% if @cook_books.any? %>
          <table class="table table-striped table-hover">
            <tr>
              <th>开始时间</th>
              <th>结束时间</th>
              <th>内容</th>
              <th>菜谱类型</th>
              <th></th>
            </tr>
              <% (@cook_books || []).each do |cook_book| %>
                <tr>
                  <td><%= cook_book.start_at.try(:to_short_datetime)%></td>
                  <td><%= cook_book.end_at.try(:to_short_datetime)%></td>
                  <td><%=raw cook_book.content %></td>
                  <td><%= CookBook::RANGE_TP_DATA[cook_book.range_tp.to_s] %></td>
                  <td>
                    <%=link_to '查看',my_school_cook_book_path(cook_book)%>
                    <%if @flag%><%= link_to '编辑', edit_my_school_cook_book_path(cook_book) %>|<%= link_to '删除',my_school_cook_book_path(cook_book) , method: :delete, data: { confirm: '确定要删除么?' } %><%end%></td>
                </tr>
              <% end %>
          </table>
          <%= paginate @cook_books  %>
        <% else %>
          暂无菜谱
        <% end %>
    </div>
  </div>

</div>
