<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>菜谱</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
         <li><%=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_cook_book_path) unless @flag.blank? %>
        </li>
      </ul>
    </div>

    <div class="work_list">
        <% if @cook_books.any? %>
          <table class="table table-striped table-hover">
            <%= form_tag destroy_multiple_my_school_cook_books_path, method: :delete do %>
              <tr>
                <th><input type="checkbox" name="" value="" alt="全选" id="cook_book_all">全选</th>
                <th>开始时间</th>
                <th>结束时间</th>
                <th>内容</th>
                <th>菜谱类型</th>
                <th></th>
              </tr>
                <% (@cook_books || []).each do |cook_book| %>
                  <tr>

                    <td><input id="cook_book_<%= cook_book.id %>" class="cook_book_check" name="cook_book[]" type="checkbox" value="<%= cook_book.id %>" /></td>
                    <td><%= cook_book.start_at.try(:to_short_datetime)%></td>
                    <td><%= cook_book.end_at.try(:to_short_datetime)%></td>
                    <td><%=raw cook_book.content %></td>
                    <td><%= CookBook::RANGE_TP_DATA[cook_book.range_tp.to_s] %></td>
                    <td>
                      <%=link_to '查看',my_school_cook_book_path(cook_book)%>
                      <%if @flag%><%= link_to '编辑', edit_my_school_cook_book_path(cook_book) %>|<%= link_to '删除',my_school_cook_book_path(cook_book) , method: :delete, data: { confirm: '确定要删除么?' } %><%end%></td>
                  </tr>
                <% end %>
                <tr>
                  <td><%= submit_tag "删除", :class => 'btn' %></td>
                </tr>
              <% end %>
          </table>
          <%= paginate @cook_books  %>
        <% else %>
          暂无菜谱
        <% end %>
    </div>
  </div>

</div>
<script type="text/javascript">
  $(document).ready(function(){
  $("#cook_book_all").click(function(){
    $(".cook_book_check").each(function(){
       $(this).click();
      });
    });
  });
</script>
