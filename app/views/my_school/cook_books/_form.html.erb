<script type="text/javascript">
  jQuery(function() {
    $('#cook_book_start_at').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });
    $('#cook_book_end_at').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });
  });
</script>
<div class="control-group">
 	<%=f.label :kindergarten_id, '所属幼儿园*' ,:class=>"control-label"%>
<div class="controls">
     <%= text_field_tag(:kindergarten,@kind.name, disabled: true) %>
</div>
</div>
 <div class="control-group">
 	<%=f.label :start_at, '开始时间:' ,:class=>"control-label"%>
<div class="controls">
     <%= f.text_field(:start_at , :validate => true) %>
</div>
 </div>
<div class="control-group">
	<%=f.label :end_at, '结束时间: ' ,:class=>"control-label"%>
<div class="controls">
    <%= f.text_field(:end_at , :validate => true) %>
</div>
</div>
<div class="control-group">
  <%=f.label :range_tp, '菜谱类型: ' ,:class=>"control-label"%>
<div class="controls">
    <%= select_tag "cook_book[range_tp]", options_for_select((CookBook::RANGE_TP_DATA.collect{|s,v|[v,s]} || [])) %>
</div>
</div>
<div class="control-group">
	<%=f.label :content, '内容: ' ,:class=>"control-label"%>
  <%= f.text_field(:content,:class => 'profile_input') %>

</div>
 <div class="control-group">
<div class="controls">
<%= f.submit('创建',:class=>"btn") %>
</div>
</div>
<script type="text/javascript">
  var editor;
  KindEditor.ready(function(K) {
    editor = K.create('#cook_book_content', {
      allowFileManager : true,height:300
    });
  });
</script>