<div class="topic topic_line pull-left">
  <div class="pull-left"><input type="checkbox" class="check input-margin-fix" /></div>
  <div class="right_info">
    <div class="pull-right">
      <% if choose_operate_show("my_school/cook_books/show") %>
        <a href="<%= my_school_cook_book_path(cook_book) %>" title="查看菜谱" alt="编辑菜谱" ><i class="img-icon icon-eye-open"></i></a>
      <% end %>
      <% if choose_operate_show("my_school/cook_books/edit") %>
        <a href="<%= edit_my_school_cook_book_path(cook_book) %>" title="编辑菜谱" alt="编辑菜谱"><i class="img-icon icon-edit"></i>
      <% end %>
    </div>
    <div class="infos">
      <div class="title">
        <a href="<%= url_for(my_school_cook_book_path(cook_book)) %>"><span>从</span><span><%= cook_book.start_at.try(:to_short_datetime) %></span><span>&nbsp;到&nbsp;</span><span><%= cook_book.end_at.try(:to_short_datetime) %></span></a>
      </div>
      <div class="info">
        <abbr><%= CookBook::RANGE_TP_DATA[cook_book.range_tp.to_s] %>&nbsp;*&nbsp;<%= cook_book.creater.try(:name) %>&nbsp;创建于&nbsp;<%= cook_book.created_at.try(:to_long_datetime) %></abbr>
      </div>
      <% if cook_book_counter == 0 %>
        <div class="content">
          <%= raw cook_book.content %>
        </div>
      <% end %>
    </div>
  </div>
</div>
