<div class="show_publicity">
  <img src="/t/colorful/small_publicity.jpg" alt="展示图"/>
</div>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>活动信息管理</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li><%= link_to "活动管理", my_school_activities_path %></li>
            <li>/</li>
            <li>查看活动</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:edit,:id=>@activity.id)%>" title="编辑">
            <div class="work_action_edit">
            </div>
            <div class="work_action_edit_move">
            </div>
          </a>
        </li>
        <li>
          <%= link_to(url_for(:controller=>"/my_school/activities",:action=>:destroy,:id=>@activity.id),:method=>:delete, :confirm => "您确定删除该通知吗?") do %>
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          <% end %>
        </li>
        <li>
          <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:index)%>" title="返回">
            <div class="work_action_return">
            </div>
            <div class="work_action_return_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <form class="form-horizontal">
          <div class="control-group">
            <label class="control-label">标题</label>
            <div class="controls">
              <label class="show_label">
                <%=@activity.title %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >活动开始时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.start_at.to_short_datetime unless @activity.start_at.nil? %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >活动结束时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.end_at.to_short_datetime unless @activity.end_at.nil? %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >类型</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.tp == 0 ? "活动" : "兴趣讨论" %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >LOGO</label>
            <div class="controls">
              <label class="show_label">
                <% if @activity.asset_img.blank? %>
                  图片不存在
                <% else %>
                  <img src="<%= @activity.asset_img.public_filename(:tiny) %>" />
                <% end %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >内容</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.content %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >描述</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.note %>
              </label>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>
