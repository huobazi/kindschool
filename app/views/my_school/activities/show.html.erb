<div class="show_publicity">
  <img src="/t/colorful/small_publicity.jpg" alt="展示图"/>
</div>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          <% if controller_name == "activities" %>
            活动信息
          <% else %>
            兴趣讨论信息
          <% end %>
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              <% if controller_name == "activities" %>
                活动信息管理
              <% else %>
                兴趣讨论管理
              <% end %>
            </li>
            <li>/</li>
            <li>
              <% if controller_name == "activities" %>
                查看活动
              <% else %>
                查看兴趣讨论
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if controller_name == "activities" %>
            <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:new, :tp => 0)%>" title="添加">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/interest_activities",:action=>:new, :tp => 1)%>" title="添加">
          <% end %>
          <div class="work_action_add">
          </div>
          <div class="work_action_add_move">
          </div>
          </a>
        </li>
        <li>
          <% if controller_name == "activities" %>
            <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:edit,:id=>@activity.id)%>" title="编辑">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/interest_activities",:action=>:edit,:id=>@activity.id)%>" title="编辑">
          <% end %>
            <div class="work_action_edit">
            </div>
            <div class="work_action_edit_move">
            </div>
          </a>
        </li>
        <li>
          <% if controller_name == "activities" %>
            <%= link_to(url_for(:controller=>"/my_school/activities",:action=>:destroy,:id=>@activity.id),:method=>:delete, :confirm => "您确定删除该活动吗?") do %>
              <div class="work_action_delete">
              </div>
              <div class="work_action_delete_move">
              </div>
            <% end %>
          <% else %>
            <%= link_to(url_for(:controller=>"/my_school/interest_activities",:action=>:destroy,:id=>@activity.id),:method=>:delete, :confirm => "您确定删除该兴趣讨论吗?") do %>
              <div class="work_action_delete">
              </div>
              <div class="work_action_delete_move">
              </div>
            <% end %>
          <% end %>
        </li>
        <li>
          <% if controller_name == "activities" %>
            <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:index)%>" title="返回">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/interest_activities",:action=>:index)%>" title="返回">
          <% end %>
            <div class="work_action_return">
            </div>
            <div class="work_action_return_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <form class="form-horizontal">
          <div class="control-group">
            <label class="control-label">标题</label>
            <div class="controls">
              <label class="show_label">
                <%=@activity.title %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >活动开始时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.start_at.to_short_datetime unless @activity.start_at.nil? %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >活动结束时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.end_at.to_short_datetime unless @activity.end_at.nil? %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >类型</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.tp == 0 ? "活动" : "兴趣讨论" %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >LOGO</label>
            <div class="controls">
              <label class="show_label">
                <% if @activity.asset_img.blank? %>
                  图片不存在
                <% else %>
                  <a href="<%= @activity.asset_img.public_filename(:thumb) %>" class="fancybox" title="" >
                    <img src="<%= @activity.asset_img.public_filename(:tiny) %>" />
                  </a>
                <% end %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >内容</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.content %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >描述</label>
            <div class="controls">
              <label class="show_label">
                <%= @activity.note %>
              </label>
            </div>
          </div>
        </form>

        <hr />

        <div id="activity_entries">
          <% if @activity_entries.any? %>
            <% @activity_entries.each do |activity_entry| %>
              <div id="activity_entry_<%= activity_entry.id %>" class="activity_entry">
                <span><%= activity_entry.creater ? activity_entry.creater.name : "丢失回复人信息" %></span>: &nbsp;&nbsp; <span><%= time_ago_in_words(activity_entry.created_at) %></span> <%= simple_format activity_entry.note, :class => "activity_entry_note" %> 
                <% if destroy_activity_entry?(activity_entry) %>
                  <span class="destroy"><%= link_to "x", my_school_activity_entry_path(activity_entry, :mark => controller_name), :method => :delete %></span>
                <% end %>
              </div>
            <% end %>
            <%= paginate @activity_entries %>
          <% else %>
            暂无回复
          <% end %>
        </div>


        <% if controller_name == "activities" %>
          <%= simple_form_for(@activity_entry, :validate => true, :url => my_school_activity_entries_path, :html => {:class => "form-horizontal"}) do |f| %>
            <%= render :partial => "activity_form", :object => f %>
          <% end %>
        <% else %>
          <%= simple_form_for(@activity_entry, :validate => true, :url => my_school_activity_entries_path, :html => {:class => "form-horizontal"}) do |f| %>
            <%= render :partial => "my_school/activities/activity_form", :object => f %>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function() {
      $(".fancybox").fancybox();
  });
</script>
