<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          <% if controller_name == "activities" %>
            活动信息
          <% else %>
            兴趣讨论信息
          <% end %>
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              <% if controller_name == "activities" %>
                活动信息
              <% else %>
                兴趣讨论
              <% end %>
            </li>
            <li>/</li>
            <li>主题活动<li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if controller_name == "activities" %>
            <% if choose_operate_show("my_school/activities/new") %>
              <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:new)%>" title="添加">
                <div class="work_action_add">
                </div>
                <div class="work_action_add_move">
                </div>
              </a>
            <% end %>
        <% else %>
          <% if choose_operate_show("my_school/interest_activities/new") %>
            <a href="<%=url_for(:controller=>"/my_school/interest_activities",:action=>:new)%>" title="添加">
              <div class="work_action_add">
                </div>
                <div class="work_action_add_move">
                </div>
            </a>
          <% end %>
        <% end %>
        </li>
        <li>
          <% if choose_operate_show("my_school/activities/destroy") %>
            <a href="javascript: void(0)" rel="nofollow" title="删除" id="destroy_multiple">
              <div class="work_action_delete">
              </div>
              <div class="work_action_delete_move">
              </div>
            </a>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="search_form">
      <%= form_tag '#{ controller_name == "activities" ? "my_school/activities" : "my_school/interest_activities" }' , :method=>"get" do %>
      <b>标题：</b>
      <%= text_field :activity,:title_like,:style=>"width:100px;" ,:value=>"#{params[:activity][:title_like] if params[:activity] }"  %>
      <b>内容：</b>
      <%= text_field :activity,:content_like,:style=>"width:100px;" ,:value=>"#{params[:activity][:content_like] if params[:activity] }"  %>
      <%= submit_tag "搜索"  , :class => "btn btn-primary"%>
      <%end%>
    </div>
    <div class="work_list">
      <div class="topics">
        <%= render "my_school/activities/tab_activities" %>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $(".fancybox").fancybox();
});
$("#destroy_multiple").click(function(){
  if (confirm('您确定删除选中的贴子吗')) {
    $("#destroy_multi_form").submit();
  }
});
</script>
