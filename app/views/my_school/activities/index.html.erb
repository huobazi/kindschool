<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>活动信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>活动信息管理</li>
            <li>/</li>
            <li>活动管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/activities",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_list">
      <% if @activities.any? %>
        <table class="table table-striped table-hover">
          <tr>
            <th>标题</th>
            <th>创建人</th>
            <th>类型</th>
            <th>LOGO</th>
            <th colspans="2">操作</th>
          </tr>
          <% @activities.each do |activity| %>
            <tr>
              <td><%= link_to activity.title, my_school_activity_path(activity) %></td>
              <td><%= User.find_by_id(activity.creater_id).name unless activity.creater_id.nil? %></td>
              <td>
                <%= activity.tp == 0 ? "活动" : "兴趣讨论" %>
              </td>
              <td>
                <% if activity.asset_img.blank? %>
                  图片不存在
                <% else %>
                  <img src="<%= activity.asset_img.public_filename(:tiny) %>" />
                <% end %>
              </td>
              <td><%= link_to "查看", my_school_activity_path(activity), :class => "show" %></td>
              <td><%= link_to "编辑", edit_my_school_activity_path(activity), :class => "show" %></td>
            </tr>
          <% end %>
        </table>
        <%= paginate @activities %>
      <% else %>
        暂时没有活动
      <% end %>
    </div>
  </div>

</div>
