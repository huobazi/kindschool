<div class="show_publicity">
  <img src="/t/colorful/small_publicity.jpg" alt="展示图"/>
</div>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>宝宝在园管理信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li><%= link_to "成长记录管理", my_school_growth_records_path %></li>
            <li>/</li>
            <li>查看成长记录</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:edit,:id=>@growth_record.id)%>" title="编辑">
            <div class="work_action_edit">
            </div>
            <div class="work_action_edit_move">
            </div>
          </a>
        </li>
        <li>
          <%= link_to(url_for(:controller=>"/my_school/growth_records",:action=>:destroy,:id=>@growth_record.id),:method=>:delete, :confirm => "您确定删除该通知吗?") do %>
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          <% end %>
        </li>
        <li>
          <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:index)%>" title="返回">
            <div class="work_action_return">
            </div>
            <div class="work_action_return_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <form class="form-horizontal">
          <div class="control-group">
            <label class="control-label">学员</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.student_info_label %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >所属班级</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.squad_name_label %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >所属幼儿园</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.kindergarten_label %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >开始时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.start_at.to_short_datetime %>
              </label>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" >结束时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.end_at.to_short_datetime %>
              </label>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" >创建人</label>
            <div class="controls">
              <label class="show_label">
                <%= @creater.name %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >在园表现</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.content %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >在园表现</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.tp == 0 ? "宝宝在园" : "宝宝在家" %>
              </label>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>
