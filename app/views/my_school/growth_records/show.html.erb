<div class="show_publicity">
  <img src="/t/colorful/small_publicity.jpg" alt="展示图"/>
</div>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          <% if @growth_record.tp == true %>
            宝宝在家管理信息
          <% else %>
            宝宝在园信息
          <% end %>
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
            <% if @growth_record.tp == true %>
              <%if choose_operate_show('my_school/growth_records/home')%>
                <%= link_to "宝宝在家", home_my_school_growth_records_path %></li>
              <% end %>
            <% else %>
              <%if choose_operate_show('my_school/garden_growth_records/garden')%>
                <%= link_to "宝宝在园", garden_my_school_garden_growth_records_path %></li>
              <% end %>
            <% end %>
            <li>/</li>
            <li>查看成长记录</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if @growth_record.tp == true %>
            <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:new, :tp=>1)%>" title="添加">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/garden_growth_records",:action=>:new, :tp=>0)%>" title="添加">
          <% end %>
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <% if @growth_record.tp == true %>
            <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:edit,:id=>@growth_record.id, :tp=>1)%>" title="编辑">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/garden_growth_records",:action=>:edit,:id=>@growth_record.id, :tp=>0)%>" title="编辑">
          <% end %>
            <div class="work_action_edit">
            </div>
            <div class="work_action_edit_move">
            </div>
          </a>
        </li>
        <li>
          <% if @growth_record.tp == true %>
            <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:home)%>" title="返回">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/garden_growth_records",:action=>:garden)%>" title="返回">
          <% end %>
            <div class="work_action_return">
            </div>
            <div class="work_action_return_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <form class="form-horizontal">
          <div class="control-group">
            <label class="control-label">学员</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.student_info_label %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >所属班级</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.squad_name_label %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >所属幼儿园</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.kindergarten_label %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >开始时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.start_at.to_short_datetime %>
              </label>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" >结束时间</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.end_at.to_short_datetime %>
              </label>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" >创建人</label>
            <div class="controls">
              <label class="show_label">
                <%= @creater.name %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >
              <% if @growth_record.tp == true %>
                在家表现
              <% else %>
                在园表现
              <% end %>
            </label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.content %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >类型</label>
            <div class="controls">
              <label class="show_label">
                <%= @growth_record.tp == true ? "宝宝在家" : "宝宝在园" %>
              </label>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>
