<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          <% if controller_name == "growth_records" %>
            宝宝在家管理信息
          <% else %>
            宝宝在园信息
          <% end %>
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>成长记录管理</li>
            <li>/</li>
            <li>
            <% if controller_name == "growth_records" %>
              <%= link_to "宝宝在家", home_my_school_growth_records_path %></li>
            <% else %>
              <%= link_to "宝宝在园", garden_my_school_garden_growth_records_path %></li>
            <% end %>
            <li>/</li>
            <li>添加成长记录</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if controller_name == "growth_records" %>
            <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:home)%>" title="返回">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/garden_growth_records",:action=>:garden)%>" title="返回">
          <% end %>
            <div class="work_action_return">
            </div>
            <div class="work_action_return_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <% if controller_name == "growth_records" %>
          <%= simple_form_for(@growth_record, :validate => true, :url => my_school_growth_records_path, :html => {:class => "form-horizontal", :multipart => true}) do |f| %>
            <%= render :partial => "form", :object => f %>
          <% end %>
        <% else %>
          <%= simple_form_for(@growth_record, :validate => true, :url => my_school_garden_growth_records_path, :html => {:class => "form-horizontal", :multipart => true}) do |f| %>
            <%= render :partial => "my_school/growth_records/form", :object => f %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>


