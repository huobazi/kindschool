<script type="text/javascript">
  jQuery(function() {
    $('#growth_record_start_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });;
    $('#growth_record_end_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });;
  });
</script>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          <% if controller_name == "growth_records" %>
            宝宝在家管理信息
          <% else %>
            宝宝在园信息
          <% end %>
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              <% if action_name == "home" %>
                宝宝在家
              <% else %>
                宝宝在园
              <% end %>
            </li>
            <li>/</li>
            <li>成长记录管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
            <% if controller_name == "growth_records" %>
              <% unless current_user.get_users_ranges[:tp] == :teachers %>
                <% if choose_operate_show("my_school/growth_records/new") %>
                  <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:new)%>" title="添加">
                    <div class="work_action_add">
                    </div>
                    <div class="work_action_add_move">
                    </div>
                  </a>
                <% end %>
              <% end %>
            <% else %>
              <% if choose_operate_show("my_school/garden_growth_records/new") %>
                <a href="<%=url_for(:controller=>"/my_school/garden_growth_records",:action=>:new)%>" title="添加">
                  <div class="work_action_add">
                  </div>
                  <div class="work_action_add_move">
                  </div>
                </a>
              <% end %>
            <% end %>
        </li>
        <li>
          <% if controller_name == "growth_records" %>
            <% if choose_operate_show("my_school/growth_records/destroy") %>
              <a href="javascript: void(0)" title="删除" id="destroy_multiple">
                <div class="work_action_delete">
                </div>
                <div class="work_action_delete_move">
                </div>
              </a>
            <% end %>
          <% else %>
            <% if choose_operate_show("my_school/garden_growth_records/destroy") %>
              <a href="javascript: void(0)" title="删除" id="destroy_multiple">
                <div class="work_action_delete">
                </div>
                <div class="work_action_delete_move">
                </div>
              </a>
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="search_form">
      <%= form_tag '#{ controller_name == "growth_records" ? "/my_school/growth_records/home" : "/my_school/garden_growth_records/garden"}' , :method=>"get" do %>
        <b>学员：</b>
        <%= text_field :growth_record,:student_info_user_name_like,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:student_info_user_name_like] if params[:growth_record] }"%>
        <b>开始时间：</b>
        <%= text_field :growth_record,:start_at_equals,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:start_at_equals] if params[:growth_record] }"  %>
        <b>结束时间：</b>
        <%= text_field :growth_record,:end_at_equals,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:end_at_equals] if params[:growth_record] }"  %>
        <%= submit_tag "搜索" , :class => "btn search_btn btn-primary" %>
      <%end%>
    </div>


    <div class="work_list">
      <div class="topics">
        <% unless @growth_records.blank? %>
            <% if choose_operate_show("my_school/garden_growth_records/destroy") or choose_operate_show("my_school/growth_records/destroy") %>
              <label class="input_select_all checkbox inline ">
                <input type="checkbox" id="check_all" /> 全选
              </label>
            <% end %>
          <% if controller_name == "growth_records" %>
            <%= form_tag my_school_growth_record_path(@growth_records), method: :delete, :id => "destroy_multi_form" do %>
              <%= render partial: "/my_school/growth_records/growth_record", collection: @growth_records %>
            <% end %>
          <% else %>
            <%= form_tag my_school_garden_growth_record_path(@growth_records), method: :delete, :id => "destroy_multi_form" do %>
              <%= render partial: "/my_school/growth_records/growth_record", collection: @growth_records %>
            <% end %>
          <% end %>
          <%= paginate @growth_records %>
        <%else%>
          没有成长记录
        <% end %>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
  $("#destroy_multiple").click(function(){
    if (confirm('您确定删除选中的成长记录吗')) {
      $("#destroy_multi_form").submit();
    }
  });
</script>
