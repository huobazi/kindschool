<script type="text/javascript">
  jQuery(function() {
    $('#growth_record_start_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });
    $('#growth_record_end_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });
  });
</script>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          <% if action_name == "home" %>
            宝宝在家管理信息
          <% else %>
            宝宝在园管理信息
          <% end %>
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              <% if action_name == "home" %>
                宝宝在家
              <% else %>
                宝宝在园
              <% end %>
            </li>
            <li>/</li>
            <li>成长记录管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if action_name == "home" %>
            <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:new, :tp=>1)%>" title="添加">
          <% else %>
            <a href="<%=url_for(:controller=>"/my_school/garden_growth_records",:action=>:new, :tp=>0)%>" title="添加">
          <% end %>
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="/" title="删除" id="destroy_multiple">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>
    
    <div class="search_form">
     <%= form_tag '/my_school/growth_records' , :method=>"get" do %>
      <b>学员：</b>
      <%= text_field :growth_record,:student_info_user_name_like,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:student_info_user_name_like] if params[:growth_record] }"%>
      <b>开始时间：</b>
      <%= text_field :growth_record,:start_at_equals,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:start_at_equals] if params[:growth_record] }"  %>
      <b>结束时间：</b>
      <%= text_field :growth_record,:end_at_equals,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:end_at_equals] if params[:growth_record] }"  %>
      <%= submit_tag "搜索" %>
      <%end%>
    </div>


    <div class="work_list">
      <% if @growth_records.any? %>
        <table class="table table-striped table-hover">
          <%= form_tag destroy_multiple_my_school_growth_records_path, method: :delete, :id => "destroy_multi_form" do %>
            <tr>
              <th><input type="checkbox" name="" value="" alt="全选" id="growth_record_all">全选</th>
              <th>学员名称</th>
              <th>所属幼儿园</th>
              <th>开始时间</th>
              <th>结束时间</th>
              <th colspan="2">操作</th>
            </tr>
            <% @growth_records.each do |growth| %>
              <tr>
                <td><input id="growth_record_<%= growth.id %>" class="growth_check" name="growth[]" type="checkbox" value="<%= growth.id %>" /></td>
                <td><%= growth.student_info_label %></td>
                <td><%= growth.kindergarten_label %></td>
                <td><%= growth.start_at.to_short_datetime %></td>
                <td><%= growth.end_at.to_short_datetime %></td>

                <td>
                  <% if growth.tp == true %>
                    <%= link_to "查看", my_school_growth_record_path(growth), :class => "show" %>
                  <% else %>
                    <%= link_to "查看", my_school_garden_growth_record_path(growth), :class => "show" %>
                  <% end %>
                </td>
                <td>
                  <% if growth.tp == true %>
                    <%= link_to "编辑", edit_my_school_growth_record_path(growth), :class => "show" %>
                  <% else %>
                    <%= link_to "编辑", edit_my_school_garden_growth_record_path(growth), :class => "show" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </table>
        <%= paginate @growth_records %>
      <% else %>
        暂时没有成长记录
      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $("#growth_record_all").click(function(){
    $(".growth_check").attr("checked",this.checked);
  })
  });
  $("#destroy_multiple").click(function(){
      $("#destroy_multi_form").submit();
      return false;
  });
</script>
