<script type="text/javascript">
  jQuery(function() {
    $('#growth_record_start_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });;
    $('#growth_record_end_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });;
  });
</script>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          <% if controller_name == "growth_records" %>
            宝宝在家管理信息
          <% else %>
            宝宝在园信息
          <% end %>
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              <% if action_name == "home" %>
                宝宝在家
              <% else %>
                宝宝在园
              <% end %>
            </li>
            <li>/</li>
            <li>成长记录管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if controller_name == "growth_records" %>
            <% if choose_operate_show("my_school/growth_records/new") %>
              <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:new)%>" title="添加">
                <div class="work_action_add">
                </div>
                <div class="work_action_add_move">
                </div>
              </a>
            <% end %>
          <% else %>
            <% if choose_operate_show("my_school/garden_growth_records/new") %>
              <a href="<%=url_for(:controller=>"/my_school/garden_growth_records",:action=>:new)%>" title="添加">
                <div class="work_action_add">
                </div>
                <div class="work_action_add_move">
                </div>
              </a>
            <% end %>
          <% end %>
        </li>
        <li>
          <% if choose_operate_show("my_school/growth_records/destroy_multi_form") %>
            <a href="/" title="删除" id="destroy_multiple">
              <div class="work_action_delete">
              </div>
              <div class="work_action_delete_move">
              </div>
            </a>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="search_form">
      <%= form_tag '#{ controller_name == "growth_records" ? "/my_school/growth_records/home" : "/my_school/garden_growth_records/garden"}' , :method=>"get" do %>
        <b>学员：</b>
        <%= text_field :growth_record,:student_info_user_name_like,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:student_info_user_name_like] if params[:growth_record] }"%>
        <b>开始时间：</b>
        <%= text_field :growth_record,:start_at_equals,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:start_at_equals] if params[:growth_record] }"  %>
        <b>结束时间：</b>
        <%= text_field :growth_record,:end_at_equals,:style=>"width:100px;" ,:value=>"#{params[:growth_record][:end_at_equals] if params[:growth_record] }"  %>
        <%= submit_tag "搜索" , :class => "btn search_btn" %>
      <%end%>
    </div>


    <div class="work_list">
      <div class="topics">
        <% unless @growth_records.blank? %>
          <div class="input_select_all"><input type="checkbox" id="check_all" />全选</div>
          <%= render partial: "/my_school/growth_records/growth_record", collection: @growth_records %>
          <%= paginate @growth_records %>
        <%else%>
          没有成长记录
        <% end %>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $("#growth_record_all").click(function(){
      $(".growth_check").attr("checked",this.checked);
    })
  });
  $("#destroy_multiple").click(function(){
    $("#destroy_multi_form").submit();
    return false;
  });
</script>
