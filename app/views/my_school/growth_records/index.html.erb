<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>成长记录管理信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              <% if action_name == "home" %>
                宝宝在家
              <% else %>
                宝宝在园
              <% end %>
            </li>
            <li>/</li>
            <li>成长记录管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/growth_records",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="/" title="删除">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_list">
      <% if @growth_records.any? %>
        <table class="table table-striped table-hover">
          <tr>
            <th>名称</th>
            <th>所属幼儿园</th>
            <th>班级名称</th>
            <th>开始时间</th>
            <th>结束时间</th>
            <th colspans="2">操作</th>
          </tr>
          <% @growth_records.each do |growth| %>
            <tr>
              <td><%= growth.student_info_label %></td>
              <td><%= growth.kindergarten_label %></td>
              <td><%= growth.squad_name_label %></td>
              <td><%= growth.start_at.to_short_datetime %></td>
              <td><%= growth.end_at.to_short_datetime %></td>

              <td><%= link_to "查看", my_school_growth_record_path(growth), :class => "show" %></td>
              <td><%= link_to "编辑", edit_my_school_growth_record_path(growth), :class => "show" %></td>
            </tr>
          <% end %>
        </table>
        <%= paginate @growth_records %>
      <% else %>
        暂时没有成长记录
      <% end %>
    </div>
  </div>

</div>
