<%= stylesheet_link_tag    "css/style_v.css" %> 
<%= javascript_include_tag "js/jquery.timelinr-0.9.53.js" %>
<script>
  $(function(){
    $().timelinr({
      orientation:  'vertical',
      issuesSpeed:  300,
      datesSpeed:   100,
      arrowKeys:    'true',
      startAt:    3
    })
  });
</script>
<script type="text/javascript">
  jQuery(function() {
    $('#personal_set_created_at_greater_than_or_equal_to').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });
    $('#personal_set_created_at_less_than_or_equal_to').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });


  })

</script>
<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>个人集锦</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>

          <%=(link_to "<div class='work_action_add'>
  </div><div class='work_action_add_move'>
  </div>".html_safe ,new_my_school_personal_set_path)%>
          <%
          #if choose_operate_show('my_school/personal_sets/new')
          %>

        </li>
      </ul>
    </div>

    <%= render partial: "search_form" %>


    <div class="work_list" >

      <div id="timeline">
        <ul id="dates">
          <% (@sets || []).each do |set| %>
            <li>
              <a href="#<%=set.created_at.try(:to_long_datetime)%>" class="selected"><%=set.created_at.try(:to_long_datetime)%>
              </a>
            </li>
          <%end%>
        </ul>
        <ul id="issues">
          <% (@sets || []).each do |set| %>
            <li id="<%=set.created_at.try(:to_long_datetime)%>" class="selected">
              <%if set.resource_type=="PhotoGallery"%>
                <img src="<%= set.resource.try(:public_filename) %>" width="256px" height="256px"  class="img-rounded" />
              <%else%>
                <h1>
                  <% if set.resource.tp == 1 && !set.resource.audio.blank? %>
                    <object classid="clsid:22D6F312-B0F6-11D0-94AB-0080C74C7E95" id="MediaPlayer1" >
                      <param name="Filename" value="<%=set.resource.audio_turn%>"> <!--你文件的位置-->
                      <param name="PlayCount" value="1"><!--控制重复次数: “x”为几重复播放几次; x=0，无限循环。-->
                      <param name="AutoStart" value="0"><!--控制播放方式: x=1，打开网页自动播放; x=0，按播放键播放。-->
                      <param name="ClickToPlay" value="1"><!--控制播放开关: x=1，可鼠标点击控制播放或暂停状态; x=0，禁用此功能。-->
                      <param name="DisplaySize" value="0"><!--控制播放画面: x=0，原始大小; x=1，一半大小; x=2，2倍大小。-->
                      <param name="EnableFullScreen Controls" value="0"><!--控制切换全屏: x=1，允许切换为全屏; x=0，禁用此功能。-->
                      <param name="ShowAudio Controls" value="1"><!--控制音量: x=1，允许调节音量; x=0，禁止音量调节。-->
                      <param name="EnableContext Menu" value="0"><!--控制快捷菜单: x=1，允许使用右键菜单; x=0，禁用右键菜单。-->
                      <param name="ShowDisplay" value="0"><!--控制版权信息: x=1，显示电影及作者信息;x=0，不显示相关信息-->
                      <embed src="<%=set.resource.audio_turn%>" autostart="true" loop="true" width="200" height="50" >
                    </object >
                    <br/>
                  <% end %>
                  <%=set.resource.try(:content)%>
                </h1>
              <%end%>
              <%if @flag=="student"%>
                <%=link_to "添加到成长记录" , new_my_school_growth_record_path(:personal_set_id=>set.id),:class=>"link_to_grow btn"%>
              <%else%>
                <%=link_to "添加到成长记录" ,new_my_school_garden_growth_record_path(:personal_set_id=>set.id),:class=>"link_to_grow btn"%>
              <%end%>
              <%= link_to '删除', my_school_personal_set_path(set), :method=> :delete, :data=> { :confirm=> '你确定删除该信息吗' },:class=> "destroy" ,:class=>"personal_set_delete btn"%>
            </li>
          <% end %>
        </ul>
        <div id="grad_top"></div>
        <div id="grad_bottom"></div>
        <a href="#" id="next">+</a>
        <a href="#" id="prev">-</a>
      </div>
      <div class="paginate_div">
        <%= paginate @sets  %>
      </div>
    </div>
  </div>
</div>

