<div class="topic topic_line pull-left">
  <div class="pull-left"><input type="checkbox" class="check" name="physical_record[]" id="physical_record_<%= physical_record.id %>" value="<%= physical_record.id %>" /></div>
  <div class="avatar pull-left"><img src="<%= physical_record.student_info.user.asset_logo ? physical_record.student_info.user.asset_logo.public_filename(:thumb) : '/t/colorful/user_logo.png' %>" width="83" alt="头像"/>
  </div>
  <div class="right_info">
    <div class="pull-right">
      <% if choose_operate_show("my_school/physical_records/show") %>
        <a href="<%= my_school_physical_record_path(physical_record) %>" title="查看<%= physical_record.student_info_label %>的体检记录" alt="要看<%= physical_record.student_info_label %>的体检记录"><i class="img-icon icon-eye-open"></i></a>
      <% end %>
      <% if choose_operate_show("my_school/physical_records/edit") %>
        <a href="<%= edit_my_school_physical_record_path(physical_record) %>" title="编辑<%= physical_record.student_info_label %>的体检记录" alt="编辑<%= physical_record.student_info_label %>的体检记录"><i class="img-icon icon-edit"></i></a>
      <% end %>
    </div>
    <div class="infos">
      <div class="title">
        <%= link_to "#{physical_record.student_info_label}的体检记录", my_school_physical_record_path(physical_record) %>
      </div>
      <div class="info">
        <abbr>体检时间:<%= physical_record.send_date.try(:to_short_datetime) %></abbr>
      </div>
      <div class="info">
        <abbr><%= physical_record.student_info.try(:squad).try(:name) %>&nbsp;*&nbsp;<%= physical_record.creater.try(:name) %>
        创建于<%= physical_record.created_at.try(:to_long_datetime) %></abbr>
      </div>
    </div>
  </div>
</div>
