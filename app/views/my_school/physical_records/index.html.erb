<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>体检记录</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <%=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_physical_record_path) unless @flag.blank? %>
        </li>
      </ul>
    </div>

    <div class="work_list">
      <table class="table table-striped table-hover">
        <tr>
          <th></th>
          <th>学员</th>
          <th>体检记录</th>
          <th>体检时间</th>
          <th></th>
        </tr>
        <% (@physical_records || []).each do |physical_record| %>
          <tr>
            <td><%= check_box_tag('physical_record[id]',physical_record.id)%></td>
            <td><%= physical_record.student_info.user.try(:name) unless physical_record.student_info.blank? %></td>
            <td><%= physical_record.content %></td>
            <td><%= physical_record.send_date %></td>
            <td><%if @flag%><%= link_to '编辑', edit_my_school_physical_record_path(physical_record) %>|<%= link_to '删除',my_school_physical_record_path(physical_record) , method: :delete, data: { confirm: '确定要删除么?' } %><%end%>
           </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
