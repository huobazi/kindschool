<script type="text/javascript">
  jQuery(function() {
    $('#physical_record_send_date_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });;
  })

</script>
<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>体检记录</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li><%= link_to "体检记录", my_school_physical_records_path %></li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <%=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_physical_record_path) if choose_operate_show("my_school/physical_records/new")  %>
        </li>
        <% if choose_operate_show("my_school/physical_records/destroy") %>
          <li>
            <a href="javascript: void(0)" rel="nofollow" title="删除" id="destroy_multiple">
              <%= render partial: "/my_school/commons/delete_action" %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
    <%= render partial: "/my_school/physical_records/search_form" %>
    <div class="work_list">
      <div class="topics">
        <%= render "tab_physical_records" %>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $(document).ready(function(){
    $("#destroy_multiple").click(function(){
      if (confirm('您确定删除选中的体检记录吗')) {
        $("#destroy_multi_form").submit();
      }
    });
  });
});
</script>
