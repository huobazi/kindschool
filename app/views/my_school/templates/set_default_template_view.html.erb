<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>系统设置</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>设置默认模版</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="work_list">
      <% if @templates.any? %>
        <table class="table table-striped table-hover">
          <tr>
            <th>名称</th>
            <th>编号</th>
            <th>是否默认</th>
            <th>展示图片</th>
            <th>操作</th>
          </tr>
          <% @templates.each do |template| %>
            <tr>
              <td><%= template.name %></td>
              <td><%= template.number %></td>
              <td><%= template.is_default ? "是" : "否" %></td>
              <td><a href="<%= template.image_url %>" class="fancybox" title="">
                  <img src="<%= template.image_url %>" width="100" height="50" /></a>
              </td>
              <% if template.is_default == false %>
                <td><%= link_to "设为默认模版", :controller => :templates, :action => :set_default_template, :template_id => template.id, :class => "show" %></td>
              <% end %>
            </tr>
          <% end %>
        </table>
      <% else %>
        暂时没有模版
      <% end %>
    </div>
  </div>

</div>
<script type="text/javascript">
  $(document).ready(function() {

	$(".fancybox").fancybox();
  })
	
</script>
