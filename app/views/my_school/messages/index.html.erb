<div class="show_work">
    <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>收件箱</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li><%= link_to "收件箱", my_school_messages_path %></li>
            <li>/</li>
            <li>收件箱</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/messages",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="/" title="删除" id="destroy_multiple">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>
    <div class="search_form">
      <%= form_tag '/my_school/messages' , :method=>"get" do %>
        <b>阅读状态：</b>
        <%= select_tag("messages[message_entries_read_status_equals]", options_for_select([["全部",""],["已读",1],["未读",0]],(params[:messages].blank? ? "" : params[:messages][:message_entries_read_status_equals])),:style=>"width:100px;margin-top: 10px;") %>
        <%= submit_tag "搜索", :class => "btn btn-primary"%>
      <%end%>
    </div>
    <div class="work_list">
      <%= render "tab_message" %>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){

  $("#destroy_multiple").click(function(){
      $("#destroy_multi_form").submit();
      return false;
  });
});
</script>
