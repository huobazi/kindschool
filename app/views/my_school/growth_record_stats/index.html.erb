<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          成长记录统计
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              统计
            </li>
            <li>/</li>
            <li>成长记录统计</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
      </ul>
    </div>


    <div class="work_list">
      <div class="topics">
        <p>总共成长记录数量:<%= @growth_record_count %></p>
        <p>宝宝在家成长记录数量: <%= @home_growth_record_count %></p>
        <p>宝宝在园成长记录数量: <%= @garden_growth_record_count %></p>

        <hr />
        <p>宝宝在家成长记录</p>
        <% @kind.squads.each do |squad| %>
          <% @squad_growth_record_count = GrowthRecord.where("student_infos.squad_id = ? and tp = 1", squad.id).joins(:student_info).count %>
          <p><%= squad.name %>: (<%= @squad_growth_record_count %>)</p>
          <p style="text-indent: 10px;">学员</p>
          <div style="text-indent: 20px;">
            <% squad.student_infos.each do |student_info| %>
              <p><%= student_info.user.try(:name) %>(<%= student_info.growth_records.where(tp: 1).count %>)</p>
            <% end %>
          </div>

          <hr />
        <% end %>

        <p></p>

        <p>宝宝在园成长记录</p>

        <% @kind.squads.each do |squad| %>
          <% @squad_growth_record_count = GrowthRecord.where("student_infos.squad_id = ? and tp = 0", squad.id).joins(:student_info).count %>
          <p><%= squad.name %>: (<%= @squad_growth_record_count %>)</p>
          <p style="text-indent: 10px;">学员</p>
          <div style="text-indent: 20px;">
            <% squad.student_infos.each do |student_info| %>
              <p><%= student_info.user.try(:name) %>(<%= student_info.growth_records.where(tp: 0).count %>)</p>
            <% end %>
          </div>

          <hr />
        <% end %>
      </div>
    </div>
  </div>

</div>
