<script type="text/javascript">
  $(function() {
    $("#dialog_change_users" ).dialog({
      dialogClass: "no-close",
      autoOpen: false,
      height:500,
      width:700,
      buttons: {
        "确定": function () {
          $(this).dialog("close");
        },
        "取消": function () {
          $("#message_inputs").html("");
          $(this).dialog("close");
        }
      }
    });
    $( "#change_users" ).click(function() {
      $( "#dialog_change_users" ).dialog("open");
    });
  });
</script>
<fieldset class="people_manage">
      <legend><label>该班级的负责老师</label></legend>
      <%=render :partial => "/my_school/virtual_squads/personnel_selection"-%>
      
        <div class="work_list">
          <% unless @squad.teachers.blank? %>
            <table class="table table-striped table-hover">
              <tr>
                <th>名称</th>
                <th>账号</th>
                <th>是否班主任</th>
                <th>操作</th>
              </tr>
              <% @squad.teachers.each do |teacher| %>
                <tr>
                  <td><%= teacher.staff.try(:user).try(:name) %></td>
                  <td><%= teacher.staff.try(:user).try(:login) %></td>
                  <td><%= teacher.tp == 1 ? "是" : "否" %></td>
                  <td>
                    <% if teacher.tp == 0 %>
                        <%= link_to "设为班主任", :controller => "/my_school/teachers", :action => :set_class_teacher, :teacher_id => teacher.id, :squad_id => teacher.squad_id, :staff_id => teacher.staff_id, :if_squad => true %>
                    <% else %>
                      <%= nil %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
          <% else %>
            没有负责的老师
          <% end %>
        </div>
    </fieldset>
     <div id="dialog_change_users"   title="选择老师">
       <%= render :partial => "/my_school/messages/inbox_teacher" %>
      </div>
<%=render :partial => "/my_school/virtual_squads/personnel_select_js.html.erb"-%>