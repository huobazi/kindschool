<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>班级管理信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>人员管理</li>
            <li>/</li>
            <li>班级管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/squads",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="/" title="删除">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>
    <div>
     <%= form_tag '/my_school/squads' , :method=>"get" do %>
      <b>名称：</b>
      <%= text_field :squad,:name_like,:style=>"width:100px;" ,:value=>"#{params[:squad][:name_like] if params[:squad] }"  %>
      <b>年级：</b>
      <%= text_field :squad,:grade_name_like,:style=>"width:100px;" ,:value=>"#{params[:squad][:grade_name_like] if params[:squad] }"  %>
      <%= submit_tag "搜索" %>
      <%end%>
    </div>
    <div class="work_list">
      <% if @squads.any? %>
        <table class="table table-striped table-hover">
          <%= form_tag destroy_multiple_my_school_squads_path, method: :delete do %>
            <tr>
              <th><input type="checkbox" name="" value="" alt="全选" id="squad_all">全选</th>
              <th>名称</th>
              <th>届</th>
              <th>年级</th>
              <th>描述</th>
              <th colspans="2">操作</th>
            </tr>
            <% @squads.each do |squad| %>
              <tr>
                <td><input id="squad_<%= squad.id %>" class="squad_check" name="squad[]" type="checkbox" value="<%= squad.id %>" /></td>
                <td><%= link_to squad.name, my_school_squad_path(squad) %></td>
                <td><%= squad.kindergarten_label %></td>
                <td><%= squad.grade_label %></td>
                <td><%= squad.note %></td>
                <td><%= link_to "查看", my_school_squad_path(squad), :class => "show" %></td>
                <td><%= link_to "编辑", edit_my_school_squad_path(squad), :class => "show" %></td>
              </tr>
            <% end %>
            <tr>
              <td><%= submit_tag "删除", :class => 'btn' %></td>
            </tr>
          <% end %>
        </table>
        <%= paginate @squads %>
      <% else %>
        暂时没有班级
      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function(){
  $("#squad_all").click(function(){
    $(".squad_check").each(function(){
       $(this).click();
      });
    });
  });
</script>
