<div class="show_publicity">
  <img src="/t/colorful/small_publicity.jpg" alt="展示图"/>
</div>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          园长信箱
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>
              <%= link_to "园长信箱", my_school_dean_emails_path %>
            </li>
            <li>/</li>
            <li>查看信件</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if choose_operate_show("my_school/dean_emails") %>
            <a href="<%=url_for(:controller=>"/my_school/dean_emails",:action=>:index, :params=> session[:return_to])%>" title="返回">
              <div class="work_action_return">
              </div>
              <div class="work_action_return_move">
              </div>
            </a>
          <% end %>
        </li>
      </ul>
    </div>
    <script type="text/javascript">
      $(function() {
        $("#return_dean").dialog({
          dialogClass: "no-close",
          autoOpen: false,
          height:400,
          title: "回复信件",
          width:600,
          buttons: {
            "确定": function () {
              $(this).dialog("close");
            },
            "取消": function () {
              $(this).dialog("close");
            }
          }
        });
        $( "#but_return" ).click(function() {
          $( "#return_dean" ).dialog("open");
        });
      });
    </script>
    <div class="work_form">
      <div class="form_div">
        <div class="show" id="growth_record">
          <div class="content">
            <div class="control-group">
              <div class="left_table">
                <div class="controls">
                  <label class="show_label">
                    家长名字：<%=@dean_email.user_name%>
                  </label>
                </div>
              </div>
              <div class="right_table">
                <div class="controls">
                  <label class="show_label">
                    Email：<%=@dean_email.user_email%>
                  </label>
                </div>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">标题：</label>
              <div class="controls">
                <label class="show_label">
                  <%=@dean_email.title%>
                </label>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">内容：</label>
              <div class="controls">
                <label class="show_label">
                  <%=@dean_email.content%>
                </label>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">时间：<%=@dean_email.try(:created_at).try(:to_short_datetime)%></label>
            </div>
            <div class="control-group">
              <div class="controls">
                <label class="show_label">
                  <input type="button" class="btn btn-large btn-primary" value="回复信件" id="but_return"/>
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="return_dean">
  
</div>