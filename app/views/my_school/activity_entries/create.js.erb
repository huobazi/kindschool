(function() {
  if ( $(".no_reply").length > 0 ) {
    $(".no_reply").remove();
  }
  if( $("#topic_entries div").length > 0 ) {
    if ($("nav.pagination").length > 0) {
      $('<%= escape_javascript(render "activity_entry", :activity_entry => @activity_entry, :activity_entry_counter => @activity.activity_entries.count - 1) %>').hide().insertBefore($("#topic_entries").children().last()).fadeIn('fast');
    } else {
      $('<%= escape_javascript(render "activity_entry", :activity_entry => @activity_entry, :activity_entry_counter => @activity.activity_entries.count - 1) %>').hide().insertAfter($("#topic_entries").children().last()).fadeIn('fast');
    }
  } else {
    $("#topic_entries").empty();
    $('<%= escape_javascript(render "activity_entry", :activity_entry => @activity_entry, :activity_entry_counter => @activity.activity_entries.count - 1) %>').hide().appendTo($("#topic_entries")).fadeIn('fast');
  }
  activity_entry_note.html("");
  $("#topic_entries").find("#total").html(<%= @activity.activity_entries.count %>)
})()
