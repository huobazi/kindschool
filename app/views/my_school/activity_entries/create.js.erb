(function() {
  if ( $(".no_reply").length > 0 ) {
    $(".no_reply").remove();
  }
  if ( $("#tab_activity_entries nav.pagination").length > 0 ) {
    $('<%= escape_javascript(render "activity_entry", :activity_entry => @activity_entry, :activity_entry_counter => @activity.activity_entries.count - 1) %>').hide().insertBefore($("nav.pagination")).fadeIn('fast');
  } else {
    $('<%= escape_javascript(render "activity_entry", :activity_entry => @activity_entry, :activity_entry_counter => @activity.activity_entries.count - 1) %>').hide().appendTo($("#tab_activity_entries")).fadeIn('fast');
  }
  activity_entry_note.html("");
  $("#topic_entries").find("#total").html(<%= @activity.activity_entries.count %>)
})()
