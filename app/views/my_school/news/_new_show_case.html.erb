<%unless @new.page_imgs.blank?%>
<div class="showcase">
  <div class="carousel main"  style="width:650px">
    <div class="prev">
      <div class="left">
      </div>
      &nbsp;
    </div>
    <div class="jCarouselLite">
        <ul>
          <% @new.page_imgs.each do |page_img| %>
              <li>
                <a href="<%= page_img.public_filename(:thumb) %>" class="fancybox"  title="<%=@new.title%>">
                  <img src="<%= page_img.public_filename(:middle) %>" alt="" width="239" height="177"/>
                </a>
              </li>
          <% end %>
        </ul> 
    </div>
    <div class="next">
      <div class="right">

      </div>
      &nbsp;
    </div>
  </div>
</div>
<script type="text/javascript">
    $(function() {
      $(".jCarouselLite").jCarouselLite({
        btnNext: ".main .next",
        btnPrev: ".main .prev",
        auto: 2000,
        onMouse:true,
        visible: 2
      });
      $(".fancybox").fancybox();
    });
  </script>
<%end%>