<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>新闻</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
             <li><%= link_to "新闻", my_school_news_index_path %></li>
            <li>/</li>
            <li>添加新闻</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
       <a href="<%=url_for(:controller=>"/my_school/news",:action=>:index)%>" title="返回">
            <%= render partial: "/my_school/commons/return_action" %>
          </a>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
       <%= form_for(@new, :validate => true,:url=>my_school_news_index_path(@new), :html =>{:class=>"form-horizontal"}) do |f| %>
          <%= render 'form', :f=>f %>
       <% end %>
      </div>
    </div>
  </div>

</div>
