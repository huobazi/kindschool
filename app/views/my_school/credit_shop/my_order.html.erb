<div class="center_user_work">
  <div class="center_user_conment">
    <%=render "center_left"%>
    <div class="center_right">
      <div class="center_right_line"></div>
      <div class="center_right_bottom">
        <div class="center_conment_right">
          <p><span class="credit_title"><b>我兑换的礼品</b></p>
        </div>
        <div class="center_conment_right_mid">
        <div class="credit_user">
           <ul class="clearfix">
             <li style="border-right: none;">
               <div class="user_credit_one_v">
                <p style="font-size:16px;color:#000">我的积分</p>
                <div>
                  <div class="user_credit_show"></div>
                  <p style="font-size:30px;color:#5b8b0f"><%=@personal_credits.credit%></p>
                </div>
               </div>
             </li>
             <li>
              </li>
           </ul>
         </div>
         </div>
        <div class="center_right_bottom_mid" style="margin-top: -10px;">
          <div>
            <div>

              <div class="en_order">
                <h4>我的已完成订单</h4>
              </div>

              <table cellpadding="10" cellspacing="0" class="cart_data table table-hover">
                <tr class="carttitle thbrank">
                  <td>订单号</td>
                  <td>商品</td>
                  <td colspan="2">总积分</td>
               </tr>
                <tbody>

                  <% @en_orders.each do |order|%>
                    <tr>
                      <td><%= order.number %></td>
                      <td>
                        <% order.order_infos.each do |li| %>
    　　　　　　　　　　 <div class="olitem">
　　　　　　　　　　　　　<span class="olitemqty"><%= li.count %></span>
　　　　　　　　　　　　　<span class="olitemtitle"><%= li.product.name %></span>
                          <span class="olitemtitle"><%= li.product.credit %></span>
    　　　　　　　　　　 </div>
      　　　　　　　　　<% end %>
                      </td>
                      <td><%=order.credit%></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <div class="un_order">
                <h4>我的未完成订单</h4>
              </div>

              <table cellpadding="10" cellspacing="0" class="cart_data table table-hover">
                <tr class="carttitle thbrank">
                  <td>订单号</td>
                  <td>商品</td>
                  <td colspan="2">总积分</td>
               </tr>
                <tbody>

                  <% @un_orders.each do |order|%>
                    <tr>
                      <td><%= order.number %></td>
                      <td>
                        <% order.order_infos.each do |li| %>
    　　　　　　　　　　 <div class="olitem">
　　　　　　　　　　　　　<span class="olitemqty"><%= li.count %></span>
　　　　　　　　　　　　　<span class="olitemtitle"><%= li.product.name %></span>
                          <span class="olitemtitle"><%= li.product.credit %></span>
    　　　　　　　　　　 </div>
      　　　　　　　　　<% end %>
                      </td>
                      <td><%=order.credit%></td>
                    </tr>
                  <% end %>
                  <tr><td><%=link_to "去完成订单",{:action=>:ship},:class=>"btn btn-success" %></td></tr>
                </tbody>
              </table>
            </div>
          </div>
          <div>
          </div>
        </div>
        <div class="center_conment_right_bottom">
        </div>
      </div>
    </div>
  </div>
  <div class="center_user_conment_mid clearfix">
  </div>
  <div class="center_user_conment_bottom">
  </div>
</div>
