<%=link_to "积分兑换" ,ship_my_school_credit_shop_index_path %>
<%= link_to  "积分",{:controller=>"/my_school/credit_shop",:action=>:products,:serarch=>"credit",:serarch_type=>(@serarch == "credit" ? (@serarch_type == "ascend" ? "descend" : "ascend") : "descend")}.merge(:product=>params[:product]) %>
