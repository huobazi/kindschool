<% if @logo %>
  <% if @logo.page_img %>
    <img src='<%= @logo.page_img.public_filename(:middle)  %>' alt="<%= @logo.name %>" title="<%= @logo.name %>"/><br/>
  <% end %>
  <%= @logo.name %><br/>
  <%= @logo.note %>
<% end %>
<br/><br/>
<h1>商品信息</h1>
<hr/>
<%= form_tag '/my_school/credit_shop/products' , :method=>"get" do %>
  <b>名称：</b>
  <%= text_field :product,:name_like ,:value=>"#{params[:product][:name_like] if params[:product] }"%>
  <%= submit_tag "搜索"  , :class => "btn btn-primary"%>
<%end%>

<% @products.each do |product| %>
  <div style="width: 300px;float: left;border: 1px solid #008FDC;margin: 5px;">
    商品名称：<%= product.name %><br/>
    价格：<%= product.price %><br/>
    积分：<%= product.credit %><br/>
  </div>
<% end %>
<%= paginate @products %>