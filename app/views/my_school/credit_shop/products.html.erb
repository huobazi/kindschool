<%= link_to "我的兑换中心",user_center_my_school_credit_shop_index_path%>

  <%#= order @products, :by => :credit, :as =>"积分" %>
<% @products.each do |product| %>
  <div style="width: 300px;float: left;border: 1px solid #008FDC;margin: 5px;">
    商品名称：<%= link_to product.name ,:controller=>"/my_school/credit_shop",:action=>"show_product",:id=>product.id %><br/>
    价格：<%= product.price %><br/>
    积分：<%= product.credit %><br/>
    库存：<%= product.product_storage %><br/>
    <%= link_to '添加购物车',
      {:action => 'add_to_cart', :id => product },
        :class => 'addtocart' %>
    </div>
<% end %>
<%= paginate @products %>
