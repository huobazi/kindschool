<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>审核幼儿园新闻</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
      </ul>
    </div>
    <div class="work_list">
        <% unless @news.blank? %>
          <table class="table table-striped table-hover">
           
              <tr>
                <th></th>
                <th>标题</th>
                <th>发表人</th>
                <th>发表时间</th>
                <th>审核状态</th>
                <th></th>
              </tr>
            <% (@news || []).each do |n_ew| %>

                  <tr>

                    <td></td>
                    <td><%= link_to n_ew.title, news_show_my_school_approves_path(:new_id=>n_ew.id) %>
                    </td>
                    <td><%=raw n_ew.creater.try(:name)%>
                    </td>
                    <td><%=raw n_ew.created_at.try(:to_long_datetime)%>
                    </td>
                    <td>
                      <%= News::STATUS[@new.approve_status]%>
                    </td>
                    <td>
                      <%= link_to "审核", news_show_my_school_approves_path(:new_id=>n_ew.id) %>
                    </td>
                  </tr>
                <% end %>
          </table>
          <%= paginate @news  %>
        <% else %>
          暂无审核新闻
        <% end %>
  </div>
</div>
