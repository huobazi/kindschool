<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>审核论坛信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
      </ul>
    </div>
    <div class="work_list">
        <% unless @topics.blank? %>
          <table class="table table-striped table-hover">
           
              <tr>
                <th></th>
                <th>标题</th>
                <th>发表人</th>
                <th>发表时间</th>
                <th>审核状态</th>
                <th></th>
              </tr>
            <% (@topics || []).each do |topic| %>

                  <tr>

                    <td></td>
                    <td><%= link_to topic.title, topic_show_my_school_approves_path(:topic_id=>topic.id) %>
                    </td>
                    <td><%=raw topic.creater.try(:name)%>
                    </td>
                    <td><%=raw topic.created_at.try(:to_long_datetime)%>
                    </td>
                    <td>
                      <%= News::STATUS[topic.approve_status]%>
                    </td>
                    <td>
                      <%= link_to "审核", topic_show_my_school_approves_path(:topic_id=>topic.id) %>
                    </td>
                  </tr>
                <% end %>
          </table>
          <%= paginate @topics  %>
        <% else %>
          暂无审核论坛信息
        <% end %>
  </div>
</div>
