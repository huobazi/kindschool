 <div class="work_list">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>审核人</th>
        <th>审核时间</th>
        <th>审核结果</th>
        <th>描述</th>
      </tr>
      <%(@approve_entries || []).each do |approve_entry|%>
      <tr>
        <td></td>
        <td><%=approve_entry.user.try(:name)%></td>
        <td><%=approve_entry.created_at.try(:to_all_datetime)%></td>
        <td><%=ApproveEntry::STATUS[approve_entry.status.to_i]%></td>
        <td><%=approve_entry.note%></td>
      </tr>
      <%end%>
    </table>
  </div>