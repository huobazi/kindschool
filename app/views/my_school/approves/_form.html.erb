<div class="control-group">
            <label class="control-label" >审核结果:</label>
            <div class="controls">
              <label class="show_label">
               <%=radio_button("approve_record" ,"status", 0)%>不通过
               </label>
               <label class="show_label">
               <%=radio_button("approve_record" ,"status", 1)%>通过
              </label>
            </div>
</div>
<div class="control-group">
            <label class="control-label" >审核描述:</label>
            <div class="controls">
              <label class="show_label">
                <%=text_area(:approve_entry, :note,:rows => 6)%>
              </label>
            </div>
</div>
<div class="control-group">
            <div class="controls">
              <%= f.submit('确定',:class=>"btn") %>
            </div>
</div>