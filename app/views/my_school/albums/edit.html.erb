<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>
          相册锦集
          <%#=link_to @album.title , my_school_album_path(@album),:class=>'blue'%><!-- ->修改相册 -->
        </label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
             <li><%= link_to "相册锦集", my_school_albums_path %></li>
            <li>/</li>
            <li>编辑锦集</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
       <a href="<%=url_for(:controller=>"/my_school/albums",:action=>:index)%>" title="返回">
            <div class="work_action_return">
            </div>
            <div class="work_action_return_move">
            </div>
          </a>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <%= form_for( [:my_school,@album] , :html =>{:class=>"form-horizontal"}) do |f| %>
          <%= render 'form', :f=>f %>
       <% end %>
      </div>
    </div>
  </div>

</div>

