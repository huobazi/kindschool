<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>相册锦集</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
         <li><%#=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_cook_book_path) unless @flag.blank? %>
        </li>
      </ul>
    </div>

    <div class="work_list">
      <table class="table table-striped table-hover">
        <tr>
          <th>相册标题</th>
          <th>内容</th>
          <th>所属班级</th>
          <th></th>
          <th></th>          
        </tr>
        <% (@albums || []).each do |album| %>
          <tr>
            <td><%= album.title%></td>
            <td><%= album.content%></td>
            <td><%= album.try(:squad_name)%></td>
            <td><%= %></td>
            <td></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
