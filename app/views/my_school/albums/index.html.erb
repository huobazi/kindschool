<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label></label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
         <li><%#=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_cook_book_path) unless @flag.blank? %>
        </li>
      </ul>
    </div>

    <div class="work_list">
      <table class="table table-striped table-hover">
        <tr>
          <th>开始时间</th>
          <th>结束时间</th>
          <th>内容</th>
          <th>菜谱类型</th>
          <th></th>          
        </tr>
        <% (@albums || []).each do |album| %>
          <tr>
            <td><%= album%></td>
            <td><%= %></td>
            <td><%=raw cook_book.content %></td>
            <td><%= CookBook::RANGE_TP_DATA[cook_book.range_tp.to_s] %></td>
            <td><%if @flag%><%= link_to '编辑', edit_my_school_cook_book_path(cook_book) %>|<%= link_to '删除',my_school_cook_book_path(cook_book) , method: :delete, data: { confirm: '确定要删除么?' } %><%end%></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
