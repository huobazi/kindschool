<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>相册锦集</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>

            <%=(link_to "<div class='work_action_add'>
  </div><div class='work_action_add_move'>
  </div>".html_safe ,new_my_school_album_path) if choose_operate_show('my_school/albums/new')%>

        </li>
      </ul>
    </div>
    <div class="work_list" >
      <ul id="album_wall" >
        <% (@albums || []).each do |album| %>
          <li class="photo_style" for="actions_<%= album.id %>">
            <a href="<%= my_school_album_path(album)%>" class="album_a ">
              <div class="album_window"></div>
              <div class="album_img">
                <img src="<%= album.show_main_img ? album.show_main_img.public_filename(:middle) : '/t/colorful/login_img10.png' %>"  alt="<%=album.title%>"/>
              </div>
            </a>
            <div class="title">
              <span class="name"><%= album.is_top ? "[置顶]#{album.title}" : album.title %>(班级:<%= album.try(:squad_name)%>)</span>
            </div>
            <% unless current_user.get_users_ranges[:tp] == :student %>
              <div class="actions" id="actions_<%= album.id %>" style="display: none;">
                <%if choose_operate_show('my_school/albums/destroy')%>
                    <%= link_to '删除', my_school_album_path(album), :method=> :delete, :data=> { :confirm=> 'Are you sure?' },:class=> "destroy" %>
                  <%end%>
                <%if choose_operate_show('my_school/albums/edit')%>
                  <span><%=link_to '编辑',edit_my_school_album_path(album), class: "edit" %></span>
                <%end%>
              </div>
            <% end %>
            <div id="actions_<%= album.id %>_info">
              <span><%= album.album_entries.count %>张</span>
            </div>
          </li>
        <% end %>
      </ul>
      <div class="paginate_div">
     <%= paginate @albums  %>
     </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  var flag, info;
  $("li.photo_style").mouseover(function() {
    flag = "#" + $(this).attr("for")
    info = flag + "_info"
    $(flag).show()
    $(info).hide()
  }).mouseout(function() {
    $(flag).hide()
    $(info).show()
  })
})
</script>
