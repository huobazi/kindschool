<script type="text/javascript">
  //$(document).ready(
   window.onload = function() {
    $("div#my-folio-of-works").slideViewerPro({
      thumbs: 6,
      autoslide: true,
      asTimer: 999999,
      typo: true,
      galBorderWidth: 0,
      thumbsBorderOpacity: 0,
      buttonsTextColor: "#707070",
      buttonsWidth: 40,
      thumbsActiveBorderOpacity: 0.8,
      thumbsActiveBorderColor: "aqua",
      shuffle: false
    });
  }
</script>
<div id="records">
  <% unless @album_entries.blank? %>
    <div id="my-folio-of-works" class="svwp">
      <ul>
        <% @album_entries.each do |a_e| %>
          <li>
            <a href="" class="fancybox"  title="">
            <img class="lazy" src="<%=a_e.asset_img.public_filename(:thumb)%>" alt="创建时间<%= a_e.created_at.try(:to_long_datetime) %>--<%=a_e.title%>" width="640" height="480" data-original=""/> 
            </a>
          </li>
        <% end %>
      </ul>
    </div>
    <script type="text/javascript">
    $(function() {
      $(".fancybox").fancybox();
    });
  </script>
  <% else %>
    没有上传图片
  <% end %>
</div>

