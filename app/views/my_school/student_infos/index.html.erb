<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>学籍管理信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>人员管理</li>
            <li>/</li>
            <li>学籍管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/student_infos",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="/" title="删除" id="destroy_multiple">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="search_form">
     <%= form_tag '/my_school/student_infos' , :method=>"get" do %>
      <b>名称：</b>
      <%= text_field :student_info,:user_name_like,:style=>"width:100px;" ,:value=>"#{params[:student_info][:user_name_like] if params[:student_info] }"  %>
      <b>账号：</b>
      <%= text_field :student_info,:user_login_like,:style=>"width:100px;" ,:value=>"#{params[:student_info][:user_login_like] if params[:student_info] }"  %>
      <%= submit_tag "搜索" %>
      <%end%>
    </div>

    <div class="work_list">
      <% unless @student_infos.blank? %>
        <table class="table table-striped table-hover">
          <%= form_tag destroy_multiple_my_school_student_infos_path, method: :delete, :id => "destroy_multi_form" do %>
            <tr>
              <th><input type="checkbox" name="" value="" alt="全选" id="student_all">全选</th>
              <th>名称</th>
              <th>账号</th>
              <th>电话号码</th>
              <th>性别</th>
              <th>所属幼儿园</th>
              <th>所属类别</th>
              <th>微信号</th>
              <th colspan="2">操作</th>
            </tr>
            <% @student_infos.each do |student| %>
              <tr>
                <td><input id="student_<%= student.id %>" class="student_check" name="student[]" type="checkbox" value="<%= student.id %>" /></td>
                <td><%= link_to student.user.name, my_school_student_info_path(student) %></td>
                <td><%= student.user.login %></td>
                <td><%= student.user.phone %></td>
                <td><%= student.user.gender == "M" ? "男" : "女" %></td>
                <td><%= student.user.kindergarten_label %></td>
                <td><%= student.user.tp_label %></td>
                <td><%= student.user.weixin_code ? student.user.weixin_code : "暂无" %></td>

                <td><%= link_to "查看", my_school_student_info_path(student), :class => "show" %></td>
                <td><%= link_to "编辑", edit_my_school_student_info_path(student), :class => "show" %></td>
              </tr>
            <% end %>
          <% end %>
        </table>
        <%= paginate @student_infos %>
      <% else %>
        暂时没有学员
      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $("#student_all").click(function(){
    $(".student_check").attr("checked",this.checked);
  });
  $("#destroy_multiple").click(function(){
      $("#destroy_multi_form").submit();
      return false;
  });
});
</script>
