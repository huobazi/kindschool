<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>学籍管理信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>人员管理</li>
            <li>/</li>
            <li>学籍管理</li>
          </ul>
        </div>
      </div>
      <% if current_user.tp != 0 %>
        <ul class="work_action">
          <li>
            <% if choose_operate_show("my_school/student_infos/new") %>
              <a href="<%=url_for(:controller=>"/my_school/student_infos",:action=>:new)%>" title="添加">
                <div class="work_action_add">
                </div>
                <div class="work_action_add_move">
                </div>
              </a>
            <% end %>
          </li>
          <li>
            <!--
              <a id="destroy_multiple" href="javascript: void(0)" data-confirm="您确定删除选中学员吗?" data-method="get" rel="nofollow">
            -->
            <% if choose_operate_show("my_school/student_infos/destroy") %>
              <a id="destroy_multiple" href="javascript: void(0)" rel="nofollow">
                <div class="work_action_delete">
                </div>
                <div class="work_action_delete_move">
                </div>
              </a>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
    <% if current_user.tp != 0 %>
      <div class="search_form">
        <%= form_tag '/my_school/student_infos' , :method=>"get" do %>
          <b>名称：</b>
          <%= text_field :student_info,:user_name_like,:style=>"width:100px;" ,:value=>"#{params[:student_info][:user_name_like] if params[:student_info] }"  %>
          <b>账号：</b>
          <%= text_field :student_info,:user_login_like,:style=>"width:100px;" ,:value=>"#{params[:student_info][:user_login_like] if params[:student_info] }"  %>
          <b>班级：</b>
          <%= text_field :student_info,:squad_name_like,:style=>"width:100px;" ,:value=>"#{params[:student_info][:squad_name_like] if params[:student_info] }"  %>
          <b>手机号：</b>
          <%= text_field :student_info,:user_phone_like,:style=>"width:100px;" ,:value=>"#{params[:student_info][:user_phone_like] if params[:student_info] }"  %>
          <b>收短信：</b>
          <%= select_tag("student_info[user_is_receive_equals]", options_for_select([["全部",""],["可收短信",1],["不可收短信",0]],(params[:student_info].blank? ? "" : params[:student_info][:user_is_receive_equals])),:style=>"width:100px;") %>
          <%= submit_tag "搜索" %>
        <%end%>
        <%if choose_operate_show("my_school/student_infos/download_student_infos")%>
        <p>
         表格下载:
          <%= link_to "深圳市教育系统", download_student_infos_my_school_student_infos_path(format: "xls",tp: "shenzhen",student_info: params[:student_info]) ,:class=>"btn" %>
          <%= link_to "广东省教育系统", download_student_infos_my_school_student_infos_path(format: "xls",tp: "guangzhou",student_info: params[:student_info]) ,:class=>"btn" %>
      </p>
      <%= form_tag import_my_school_student_infos_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "批量导入",:class=>"btn" %>
      <a class="blue" title="批量表格下载" href="/doc/Children.xls">批量表格下载</a>
      <% end %>
      <% end %>
      </div>
    <% end %>
    <div class="work_list">
      <% unless @student_infos.blank? %>
        <%= form_tag my_school_student_info_path(@student_infos), method: :delete, :id => "destroy_multi_form" do %>
          <table class="table table-striped table-hover">
            <tr>
              <th style="width: 90px;"><input type="checkbox" name="" value="" alt="全选" id="check_all">&nbsp;<label style="display: inline;font-size: 13px;" for="check_all">全选</label></th>
              <th>名称</th>
              <th>账号</th>
              <th>班级</th>
              <th>电话号码</th>
              <th>性别</th>
              <th>操作</th>
            </tr>
            <% @student_infos.each do |student| %>
              <tr>
                <td><input id="student_<%= student.id %>" class="check" name="student[]" type="checkbox" value="<%= student.id %>" /></td>
                <td><%= link_to student.user.name, my_school_student_info_path(student) %></td>
                <td><%= student.user.login %></td>
                <td><%= student.squad.name %></td>
                <td><%= student.user.phone %></td>
                <td><%= student.user.gender == "M" ?  "女" : "男" %></td>
                <td>
                  <div class="index_a">
                    <% if choose_operate_show("my_school/student_infos/show") %>
                      <%= link_to "查看", my_school_student_info_path(student) %>
                    <% end %>
                    <% if choose_operate_show("my_school/student_infos/edit") %>
                      <%= link_to "编辑", edit_my_school_student_info_path(student) %>
                    <% end %>
                    <% if choose_operate_show("my_school/student_infos/destroy") %>
                      <%= link_to "删除", my_school_student_info_path(student), :method => "delete", confirm: "您确定删除#{student.try(:user).try(:name)}吗" %>
                    <% end %>
                    <% if choose_operate_show("my_school/users/set_gather_sms") %>
                      <%= link_to (student.user.is_receive ? "取消收短信" : "设为可收短信"), set_gather_sms_my_school_user_path(student.user) %>
                    <% end %>
                    <% if choose_operate_show("my_school/users/reset_password") %>
                    <%=link_to '重置密码',reset_password_my_school_user_path(student.user),:title=>"最后重置时间:#{
                    student.user.ret_password_records.first ? 
                    student.user.ret_password_records.try(:first).try(:created_at).try(:to_long_datetime) :  '无' }", method: :post,data: { confirm: '确定要重置密码?' } %>
                    <%end%>
                  </div>
                </td>
              </tr>
            <% end %>
          </table>
        <% end %>
        <%= paginate @student_infos %>
      <% else %>
        没有学员
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
    $("#check_all").on('ifClicked', function() {
      if(this.checked) {
        $(".check").iCheck('uncheck');
      } else {
        $(".check").iCheck('check');
      }
    })
    $("#destroy_multiple").click(function(){
      if (confirm('您确定删除选中的学员吗')) {
        $("#destroy_multi_form").submit();
      } else {
        return false;
      }
    });
  });
</script>
