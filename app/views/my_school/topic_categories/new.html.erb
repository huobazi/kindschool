<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>论坛分类信息管理</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>系统设置</li>
            <li>/</li>
            <li>
              <% if choose_operate_show("my_school/topic_categories/index") %>
                <%= link_to "论坛分类管理", my_school_topic_categories_path %>
              <% else %>
                论坛分类管理
              <% end %>
            </li>
            <li>/</li>
            <li>新增论坛分类</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if choose_operate_show("my_school/topic_categories/index") %>
            <a href="<%=url_for(:controller=>"/my_school/topic_categories",:action=>:index)%>" title="返回">
              <div class="work_action_return">
              </div>
              <div class="work_action_return_move">
              </div>
            </a>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <%= simple_form_for(@topic_category, :validate => true, :url => my_school_topic_categories_path, :html => {:class => "form-horizontal"}) do |f| %>
          <%= render :partial => "form", :object => f %>
        <% end %>
      </div>
    </div>
  </div>

</div>


