<div class="show_publicity">
  <img src="/t/colorful/small_publicity.jpg" alt="展示图"/>
</div>
<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>查看论坛分类信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>系统设置</li>
            <li>/</li>
            <li>
            <% if choose_operate_show("my_school/topic_categories/index") %>
              <%= link_to "论坛分类管理", my_school_topic_categories_path %>
            <% else %>
              论坛分类管理
            <% end %>
            </li>
            <li>/</li>
            <li>查看论坛分类</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if choose_operate_show("my_school/topic_categories/new") %>
            <a href="<%=url_for(:controller=>"/my_school/topic_categories",:action=>:new)%>" title="添加">
              <%= render partial: "/my_school/commons/add_action" %>
            </a>
          <% end %>
        </li>
        <li>
          <% if choose_operate_show("my_school/topic_categories/edit") %>
            <a href="<%=url_for(:controller=>"/my_school/topic_categories",:action=>:edit,:id=>@topic_category.id)%>" title="编辑">
              <%= render partial: "/my_school/commons/edit_action" %>
            </a>
          <% end %>
        </li>
        <li>
          <% if choose_operate_show("my_school/topic_categories/destroy") %>
            <%= link_to(url_for(:controller=>"/my_school/topic_categories",:action=>:destroy,:id=>@topic_category.id),:method=>:delete, :confirm => "您确定删除该论坛分类吗?") do %>
              <%= render partial: "/my_school/commons/delete_action" %>
            <% end %>
          <% end %>
        </li>
        <li>
          <a href="<%=url_for(:controller=>"/my_school/topic_categories",:action=>:index)%>" title="返回">
            <%= render partial: "/my_school/commons/return_action" %>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
        <form class="form-horizontal">
          <div class="control-group">
            <label class="control-label">名称</label>
            <div class="controls">
              <label class="show_label">
                <%=@topic_category.name%>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >所属幼儿园</label>
            <div class="controls">
              <label class="show_label">
                <%= @topic_category.kindergarten_label %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >贴子数</label>
            <div class="controls">
              <label class="show_label">
                <%= @topic_category.topics.try(:count) %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" >排序</label>
            <div class="controls">
              <label class="show_label">
                <%= @topic_category.try(:sequence) %>
              </label>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>
