<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>论坛分类管理</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>系统设置</li>
            <li>/</li>
            <li>论坛分类管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if choose_operate_show("my_school/topic_categories/new") %>
            <a href="<%=url_for(:controller=>"/my_school/topic_categories",:action=>:new)%>" title="添加">
              <div class="work_action_add">
              </div>
              <div class="work_action_add_move">
              </div>
            </a>
          <% end %>
        </li>
        <% if choose_operate_show("my_school/topic_categories/destroy_multiple") %>
          <li>
            <a href="/" title="删除" id="destroy_multiple">
              <div class="work_action_delete">
              </div>
              <div class="work_action_delete_move">
              </div>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="search_form">
     <%= form_tag '/my_school/topic_categories' , :method=>"get" do %>
      <b>名称：</b>
      <%= text_field :topic_category,:name_like,:style=>"width:100px;" ,:value=>"#{params[:topic_category][:name_like] if params[:topic_category] }"  %>
      <%= submit_tag "搜索" %>
      <%end%>
    </div>
    <div class="work_list">
      <% unless @topic_categories.blank? %>
        <table class="table table-striped table-hover">
          <%= form_tag destroy_multiple_my_school_topic_categories_path, method: :delete, :id => "destroy_multi_form" do %>
            <tr>
              <th><input type="checkbox" name="" value="" alt="全选" id="check_all">&nbsp;<label style="display: inline;font-size: 13px;" for="check_all"></label></th>
              <th>名称</th>
              <th>所属幼儿园</th>
              <th colspan="2">操作</th>
            </tr>
            <% @topic_categories.each do |topic_category| %>
              <tr>
                <td><input id="topic_category_<%= topic_category.id %>" class="check" name="topic_category[]" type="checkbox" value="<%= topic_category.id %>" /></td>
                <td>
                  <% if choose_operate_show("my_school/topic_categories/show") %>
                    <%= link_to topic_category.name, my_school_topic_category_path(topic_category) %>
                  <% else %>
                    <%= topic_category.name %>
                  <% end %>
                </td>
                <td><%= topic_category.kindergarten_label %></td>
                <td>
                  <% if choose_operate_show("my_school/topic_categories/show") %>
                    <%= link_to "查看", my_school_topic_category_path(topic_category), :class => "show" %>
                  <% end %>
                </td>
                <td>
                  <% if choose_operate_show("my_school/topic_categories/edit") %>
                    <%= link_to "编辑", edit_my_school_topic_category_path(topic_category), :class => "show" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </table>
        <%= paginate @topic_categories %>
      <% else %>
        没有论坛分类
      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $('input').iCheck({
    checkboxClass: 'icheckbox_square-blue',
    radioClass: 'iradio_square-blue',
    increaseArea: '20%' // optional
  });
  $("#check_all").on('ifClicked', function() {
    if(this.checked) {
      $(".check").iCheck('uncheck');
    } else {
      $(".check").iCheck('check');
    }
  })
  $("#destroy_multiple").click(function(){
      $("#destroy_multi_form").submit();
      return false;
  });
});

</script>
