<script type="text/javascript">
  jQuery(function() {
    $('#seedling_shot_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });;
  })

</script>
<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>疫苗记录</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li><%= link_to "疫苗记录", my_school_seedlings_path %></li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li><%=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_seedling_path) if choose_operate_show("my_school/seedlings/new")%>
        </li>

        <% unless current_user.get_users_ranges[:tp] == :student %>
          <li>
            <a href="/" title="删除" id="destroy_multiple">
              <%= render partial: "/my_school/commons/delete_action" %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>

    <%= render partial: "/my_school/seedlings/search_form" %>

    <div class="work_list">
      <div class="topics">
        <%= render "tab_seedlings" %>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $("#destroy_multiple").click(function(){
      $("#destroy_multi_form").submit();
      return false;
  });
});
</script>
