<% f = form %>

<%= f.input :name, :validate => true, :required => true, placeholder: "请输入年级的名称", hint: "长度控制20个字符之内", :input_html => {:class => "span5 profile_input required"} %>
<%= f.input :kindergarten_label, :required => true, :as => :string, :input_html => { :disabled => true } %>
<%= f.input :note, :validate => true, placeholder: "请输入年级的描述", :input_html => {:rows => "10", :class => "span5"}%>

<div class="control-group">
  <div class="form-actions">
    <%= f.button :submit, disable_with: "正在提交...", value: "保存", class: "btn btn-large btn-primary" %>
  </div>
</div>

<script type="text/javascript">
  $().ready(function() {
    $("#new_grade").validate();
  })
</script>
