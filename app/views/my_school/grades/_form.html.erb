<% f = form %>

<%= f.input :name, :validate => true, :required => true, :input_html => {:class => "span5 profile_input required"} %>
<%= f.input :kindergarten_label, :required => true, :as => :string, :input_html => { :disabled => true } %>
<%= f.input :note, :validate => true, :input_html => {:rows => "10", :class => "span5"}%>

<div class="control-group">
  <div class="controls">
    <%= f.button :submit, disable_with: "正在提交" %>
  </div>
</div>

<script type="text/javascript">
  $().ready(function() {
    $("#new_grade").validate();
  })
</script>
