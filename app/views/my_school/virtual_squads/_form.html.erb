<script type="text/javascript">
  $(function() {
    $("#dialog_change_users" ).dialog({
      dialogClass: "no-close",
      autoOpen: false,
      height:500,
      width:700,
      buttons: {
        "确定": function () {
          $(this).dialog("close");
        },
        "取消": function () {
          $("#message_inputs").html("");
          $(this).dialog("close");
        }
      }
    });
    $( "#change_users" ).click(function() {
      $( "#dialog_change_users" ).dialog("open");
    });
  });
</script>
