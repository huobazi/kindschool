<script type="text/javascript">
  $(function() {
    $("#dialog_change_users" ).dialog({
      autoOpen: false,
      height:500,
      width:700
    });
    $( "#change_users" ).click(function() {
      $( "#dialog_change_users" ).dialog("open");
    });
    $("#close_dialog_button").click(function(){
      $( "#dialog_change_users" ).dialog("close");
    });
  });
</script>
