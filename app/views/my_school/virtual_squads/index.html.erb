<script type="text/javascript">
  jQuery(function() {
    $('#virtual_squad_created_at_equals').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    }).on("changeDate", function() {
      $(this).datepicker('hide')
    });;
  })

</script>
<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>延时班管理</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <%=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_virtual_squad_path)  %>
        </li>
        <li>
          <a href="/" title="删除" id="destroy_multiple">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>
    <div class="search_form">
     <%= form_tag '/my_school/virtual_squads' , :method=>"get" do %>
      <b>延时班名：</b><%= text_field :virtual_squad,:name_like,:style=>"width:100px;" ,:class=>"control-label",:value=>"#{params[:virtual_squad][:name_like] if params[:virtual_squad] }" %>
      <%= submit_tag "搜索" %>
      <%end%>
    </div>
    <div class="work_list">
      <% unless @virtual_squads.blank? %>
        <table class="table table-striped table-hover">
          <%= form_tag my_school_virtual_squad_path(@virtual_squads), method: :delete, :id => "destroy_multi_form" do %>
            <tr>
              <th><input type="checkbox" name="" value="" alt="全选" id="check_all">&nbsp;<label style="display: inline;font-size: 13px;" for="check_all"></label></th>
              <th>名称</th>
              <th>老师数量</th>
              <th>学生数量</th>
              <th>创建时间</th>
              <!-- <th>描述</th> -->
              <th></th>
            </tr>
            <% (@virtual_squads || []).each do |squad| %>
              <tr>
                <td><input id="squad_<%= squad.id %>" class="check" name="squad[]" type="checkbox" value="<%= squad.id %>" /></td>
                <td><%= link_to squad.name, my_school_virtual_squad_path(squad) %>
                </td>
                <td><%=squad.user_squads_teacher_users.any? ? squad.user_squads_teacher_users.count : 0 %></td>
                <td><%=squad.user_squads_student_users.any? ? squad.user_squads_student_users.count : 0 %></td>
                <td><%=squad.created_at.try(:to_long_datetime) %></td>
                <td>
                  <div class="index_a">
                    <% if choose_operate_show("my_school/virtual_squads/show") %>
                      <%= link_to "查看", my_school_virtual_squad_path(squad) %>
                    <% end %>
                    <% if choose_operate_show("my_school/virtual_squads/edit") %>
                      <%= link_to "编辑", edit_my_school_virtual_squad_path(squad) %>
                    <% end %>
                    <% if choose_operate_show("my_school/virtual_squads/destroy") %>
                      <%= link_to '删除',my_school_virtual_squad_path(squad) , method: :delete, data: { confirm: '确定要删除么?' } %>
                    <% end %>
                  </div>
                </td>
              </tr>
          <% end %>
          <% end %>
        </table>
        <%= paginate @virtual_squads%>
      <% else %>
        暂无延时班
      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function(){
  $('input').iCheck({
    checkboxClass: 'icheckbox_square-blue',
    radioClass: 'iradio_square-blue',
    increaseArea: '20%' // optional
  });
  $("#check_all").on('ifClicked', function() {
    if(this.checked) {
      $(".check").iCheck('uncheck');
    } else {
      $(".check").iCheck('check');
    }
  }) 
  $("#destroy_multiple").click(function(){
      $("#destroy_multi_form").submit();
      return false;
  });
});
</script>
