<div class="admissions_information">
  <div class="admissions_info_title">
    <h2>政策法规</h2>
  </div>
  <div class="admissions_info_content">
    <div class="work_main_list">
      <% unless @policies.blank? %>
        <%= paginate @policies %>
        <table class="table table-striped table-hover">
          <% @policies.each do |policy| %>
            <tr>
              <td><h4><%= policy.title %></h4><br/>
                <% unless policy.asset_img.blank? %>
                  <%= raw "<img src='#{policy.asset_img.public_filename(:middle)}'  onerror='this.src='/assets/no_img.png'/>" %>
                <% end %>
                <%= raw policy.content %>
                <br/>
              </td>
            </tr>
          <% end %>
        </table>
        <%= paginate @policies %>
      <% else %>
        暂无政策法规信息
      <% end %>
    </div>
  </div>
</div>
