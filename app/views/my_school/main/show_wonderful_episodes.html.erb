<div class="admissions_information">
  <div class="admissions_info_title">
    <h2>精彩视频</h2>
  </div>
  <div class="admissions_info_content">
    <div class="work_main_list">
      <% unless @wonderful_episodes.blank? %>
        <table class="table table-striped table-hover">
          <% @wonderful_episodes.each_with_index do |wonderful_episode, index| %>
            <tr>
              <td>
                <%= index + 1 %>.
                <%= link_to truncate(wonderful_episode.title), :controller => "/my_school/main", :action => "show_wonderful_episode", :id => wonderful_episode.id %>
                <br/>
                由<%= wonderful_episode.creater.try(:name) %>创建于<%= wonderful_episode.created_at.try(:to_long_datetime) %>
                <br/>
              </td>
            </tr>
          <% end %>
        </table>
        <%= paginate @wonderful_episodes %>
      <% else %>
        暂无视频信息
      <% end %>
    </div>
  </div>
</div>
