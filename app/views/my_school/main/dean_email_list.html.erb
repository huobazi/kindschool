<div class="admissions_information">
  <div class="admissions_info_title">
    <h2>园长邮箱 <%= link_to '发送新邮件',url_for(:controller=>"/my_school/main",:action=>"dean_email"),:class=>"btn btn-large btn-primary",:style=>"float:right;" %></h2>
    <% if flash.any? %>
      <div id="flash-messages">
        <% if flash[:notice] %>
          <div class="alert alert-notice">
            <a class="close" data-dismiss="alert">x</a>
            <%= flash[:notice] %>
          </div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert">
            <a class="close" data-dismiss="alert">x</a>
            <%= flash[:alert] %>
          </div>
        <% end %>
        <% if flash[:success] %>
          <div class="alert alert-success">
            <a class="close" data-dismiss="alert">x</a>
            <%= flash[:success] %>
          </div>
        <% end %>
        <% if flash[:info] %>
          <div class="alert alert-info">
            <a class="close" data-dismiss="alert">x</a>
            <%= flash[:info] %>
          </div>
        <% end %>
        <% if flash[:error] %>
          <div class="alert alert-error">
            <a class="close" data-dismiss="alert">x</a>
            <%= raw flash[:error] %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="admissions_info_content">
    <div class="work_list">
      <% unless @dean_emails.blank? %>
        <table class="table table-striped table-hover">
          <tr>
            <th>家长</th>
            <th>标题</th>
            <th>时间</th>
            <th>&nbsp;</th>
          </tr>
          <% @dean_emails.each do |dean_email| %>
            <tr>
              <td><%= dean_email.username%></td>
              <td><%=dean_email.title %></td>
              <td><%=dean_email.try(:created_at).try(:to_short_datetime) %></td>
              <td>
                <%= link_to '查看',"###"%>
              </td>
            </tr>
          <% end %>
        </table>
        <%= paginate @dean_emails %>
      <% else %>
        暂无公开的园长邮件
      <% end %>
    </div>
  </div>
</div>