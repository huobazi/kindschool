<div class="show_work">
  <%= render :partial => "/modules/#{view_layout}/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>精彩视频</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
             <li><%= link_to "精彩视频", my_school_wonderful_episodes_path %></li>
            <li>/</li>
            <li>添加精彩视频</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
       <a href="<%=url_for(:controller=>"/my_school/wonderful_episodes",:action=>:index)%>" title="返回">
            <%= render partial: "/my_school/commons/return_action" %>
          </a>
      </ul>
    </div>

    <div class="work_form">
      <div class="form_div">
       <%= simple_form_for(@wonderful_episode, :validate => true, :url => my_school_wonderful_episodes_path(@wonderful_episode), :html => {:class => "form-horizontal"}) do |f| %>
          <%= render :partial => "form", :object => f %>
       <% end %>
      </div>
    </div>
  </div>

</div>


