<div class="control-group">
 	<%=f.label :kindergarten_id, '所属幼儿园' ,:class=>"control-label"%>
<div class="controls">
     <%= text_field_tag(:kindergarten,@kind.name, disabled: true) %>
</div>
</div>
<div class="control-group">
  <%=f.label :name, raw('<abbr title="required">*</abbr> 名称:') ,:class=>"control-label"%>
<div class="controls">
  <%= f.text_field(:name, :validate => true) %>
</div>
</div>
<div class="control-group">
  <%=f.label :number, raw('<abbr title="required">*</abbr> 编号:') ,:class=>"control-label"%>
<div class="controls">
  <%= f.text_field(:number, :validate => true) %>
</div>
</div>
<div class="control-group">
  <%=f.label :admin, '是否为管理员:' ,:class=>"control-label"%>
<div class="controls">
  <%= hidden_field_tag 'role[admin]', '0' %>
  <%= check_box(:role, :admin, {:checked=>@role.admin}, true, false)  %>
</div>
</div>
<div class="control-group">
  <%=f.label :note, '描述:' ,:class=>"control-label"%>
<div class="controls">
  <%= f.text_area(:note,:size=>"20x5",:class => "span5") %>
</div>
</div>
<div class="control-group">
<div class="controls">
<%= f.submit('保存',:class=>"btn btn-large btn-primary", disable_with: "正在提交...") %>
</div>
</div>
