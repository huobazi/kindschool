<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>角色管理</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <%=(link_to "<div class='work_action_add'>
            </div><div class='work_action_add_move'>
            </div>".html_safe ,new_my_school_physical_record_path) unless @flag.blank? %>
        </li>
        <li>
          <a href="/" title="删除" id="destroy_multiple">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>
    <div class="work_list">
      <% unless @physical_records.blank? %>
        <table class="table table-striped table-hover">
          <%= form_tag destroy_multiple_my_school_physical_records_path, method: :delete, :id => "destroy_multi_form" do %>
            <tr>
              <th><input type="checkbox" name="" value="" alt="全选" id="physical_record_all">全选</th>
              <th>学员</th>
              <th>体检记录</th>
              <th>体检时间</th>
              <th></th>
            </tr>
            <% (@physical_records || []).each do |physical_record| %>
              <tr>
                <td><input id="physical_record_<%= physical_record.id %>" class="physical_record_check" name="physical_record[]" type="checkbox" value="<%= physical_record.id %>" /></td>
                <td><%= physical_record.student_info.user.try(:name) unless physical_record.student_info.blank? %></td>
                <td><%=raw physical_record.content %></td>
                <td><%= physical_record.send_date.try(:to_short_datetime) %></td>
                <td>
                  <%=link_to '查看',my_school_physical_record_path(physical_record)%>
                  <%if @flag%><%= link_to '编辑', edit_my_school_physical_record_path(physical_record) %>|<%= link_to '删除',my_school_physical_record_path(physical_record) , method: :delete, data: { confirm: '确定要删除么?' } %><%end%>
               </td>
              </tr>
            <% end %>
          <% end %>
        </table>
        <%= paginate @physical_records %>
      <% else %>
        暂无体检记录
      <% end %>
    </div>
  </div>

</div>
