<% if @error.presence == true %>
  if ( $("#staff_user_attributes_phone").next($(".validate_icon")).length > 0 ) {
    $("#staff_user_attributes_phone").next($(".validate_icon")).remove();
  }
  $("<i class='validate_icon validate_error_icon'></i>").insertAfter($("#staff_user_attributes_phone"));
  <% if @message.present? %>
    if ( $("#staff_user_attributes_phone").nextAll().length > 0 ) {
      $("#staff_user_attributes_phone").nextAll().remove();
    }
    $('<span class="help-inline"><%= @message %></span>').insertAfter($("#staff_user_attributes_phone"));
    $("<i class='validate_icon validate_error_icon'></i>").insertAfter($("#staff_user_attributes_phone"));
  <% end %>
<% else %>
  if ( $("#staff_user_attributes_phone").next($(".validate_icon")).length > 0 ) {
    $("#staff_user_attributes_phone").next($(".validate_icon")).remove();
  }
  $("<i class='validate_icon validate_success_icon'></i>").insertAfter($("#staff_user_attributes_phone"));
<% end %>
