<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>教职工管理信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>人员管理</li>
            <li>/</li>
            <li>教职工管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <% if choose_operate_show("my_school/staffs/new") %>
            <a href="<%=url_for(:controller=>"/my_school/staffs",:action=>:new)%>" title="添加">
              <div class="work_action_add">
              </div>
              <div class="work_action_add_move">
              </div>
            </a>
          <% end %>
        </li>
        <li>
          <% if choose_operate_show("my_school/staffs/destroy_multiple") %>
            <a href="/" title="删除" id="destroy_multiple">
              <div class="work_action_delete">
              </div>
              <div class="work_action_delete_move">
              </div>
            </a>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="search_form">
      <%= form_tag '/my_school/staffs' , :method=>"get" do %>
        <b>名称：</b>
        <%= text_field :staff,:user_name_like,:style=>"width:100px;" ,:value=>"#{params[:staff][:user_name_like] if params[:staff] }"  %>
        <b>账号：</b>
        <%= text_field :staff,:user_login_like,:style=>"width:100px;" ,:value=>"#{params[:staff][:user_login_like] if params[:staff] }"  %>
        <b>发短信：</b>
        <%= select_tag("staff[user_is_send_equals]", options_for_select([["全部",""],["可发短信",1],["不可发短信",0]],(params[:staff].blank? ? "" : params[:staff][:user_is_send_equals])),:style=>"width:100px;") %>
        <b>收短信：</b>
        <%= select_tag("staff[user_is_receive_equals]", options_for_select([["全部",""],["可收短信",1],["不可收短信",0]],(params[:staff].blank? ? "" : params[:staff][:user_is_receive_equals])),:style=>"width:100px;") %>
        <%= submit_tag "搜索" %>
      <%end%>
    </div>
    <div class="work_list">
      <% unless @staffs.blank? %>
        <table class="table table-striped table-hover">
          <%= form_tag destroy_multiple_my_school_staffs_path, method: :delete, :id => "destroy_multi_form" do %>
            <tr>
              <th><input type="checkbox" name="" value="" alt="全选" id="staff_all"><label style="display: inline;" for="staff_all">&nbsp;全选<label></th>
              <th style="width: 120px;">名称</th>
              <th style="width: 100px;">账号</th>
              <th style="width: 50px;">性别</th>
              <th>微信绑定</th>
              <th style="width: 30%">操作</th>
            </tr>
            <% @staffs.each do |staff| %>
              <tr>
                <td><input id="staff_<%= staff.id %>" class="staff_check" name="staff[]" type="checkbox" value="<%= staff.id %>" /></td>
                <td>
                  <% if choose_operate_show("my_school/staffs/show") %>
                    <%= link_to staff.user.name, my_school_staff_path(staff) %>
                  <% else %>
                    <%= staff.user.name %>
                  <% end %>
                </td>
                <td><%= staff.user.login %></td>
                <td><%= staff.user.gender == "M" ? "男" : "女" %></td>
                <td><%= staff.user.weixin_code.blank? ? "未绑定" : "已绑定" %></td>
                <td>
                  <div class="index_a">
                    <% if choose_operate_show("my_school/staffs/show") %>
                      <%= link_to "查看", my_school_staff_path(staff) %>
                    <% end %>
                    <% if choose_operate_show("my_school/staffs/edit") %>
                      <%= link_to "编辑", edit_my_school_staff_path(staff) %>
                    <% end %>
                    <% if staff.user %>
                      <% if choose_operate_show("my_school/users/set_send_sms") %>
                        <%= link_to (staff.user.is_send ? "取消发短信" : "设为可发短信"), set_send_sms_my_school_user_path(staff.user) %>
                      <% end %>
                      <% if choose_operate_show("my_school/users/set_gather_sms") %>
                        <%= link_to (staff.user.is_receive ? "取消收短信" : "设为可收短信"), set_gather_sms_my_school_user_path(staff.user) %>
                      <% end %>
                      <% if choose_operate_show("my_school/users/reset_password") %>
                      <%=link_to '重置密码',reset_password_my_school_user_path(staff.user), method: :post,data: { confirm: '确定要重置密码?' } %>
                      <%end%>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </table>
        <%= paginate @staffs %>
      <% else %>
        暂时没有教职工
      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $("#staff_all").click(function(){
      $(".staff_check").attr("checked",this.checked);
    })
    $("#destroy_multiple").click(function(){
      $("#destroy_multi_form").submit();
      return false;
    });
  });
</script>
