<div class="show_work">
  <%= render :partial => "/modules/colorful/work_menu" %>
  <div class="work">
    <div class="headline">
      <div class="headline_title">
        <div class="messages_root"></div>
        <label>教职工管理信息</label>
        <div class="crumbs">
          <a href="/my_school/home" title="返回首页">
            <div class="icon_home"></div>
          </a>
          <ul>
            <li>人员管理</li>
            <li>/</li>
            <li>教职工管理</li>
          </ul>
        </div>
      </div>
      <ul class="work_action">
        <li>
          <a href="<%=url_for(:controller=>"/my_school/staffs",:action=>:new)%>" title="添加">
            <div class="work_action_add">
            </div>
            <div class="work_action_add_move">
            </div>
          </a>
        </li>
        <li>
          <a href="/" title="删除">
            <div class="work_action_delete">
            </div>
            <div class="work_action_delete_move">
            </div>
          </a>
        </li>
      </ul>
    </div>

    <div class="work_list">
      <% if @staffs.any? %>
        <table class="table table-striped table-hover">
          <tr>
            <th><input type="checkbox" name="" value="" alt="全选"></th>
            <th>名称</th>
            <th>账号</th>
            <th>性别</th>
            <th>微信号</th>
            <th colspan="2">操作</th>
          </tr>
          <% @staffs.each do |staff| %>
            <tr>
              <td><input type="checkbox" name="" value="" ></td>
              <td><%= link_to staff.user.name, my_school_staff_path(staff) %></td>
              <td><%= staff.user.login %></td>
              <td><%= staff.user.gender == "M" ? "男" : "女" %></td>
              <td><%= staff.user.weixin_code %></td>

              <td><%= link_to "查看", my_school_staff_path(staff), :class => "show" %></td>
              <td><%= link_to "编辑", edit_my_school_staff_path(staff), :class => "show" %></td>
            </tr>
          <% end %>
          <tr>
            <td><%= link_to "删除" %></td>
          </tr>
        </table>
        <%= paginate @staffs %>
      <% else %>
        暂时没有教职工
      <% end %>
    </div>
  </div>

</div>

