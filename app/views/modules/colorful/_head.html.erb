<div class="head">
  <div class="small_menu">
    <% sys_admin_menus("a").each do |menu| %>
      <%= "<div class='center_menu small_#{menu[:number]}_menu' >".html_safe%>
       <%= "<img src='/t/colorful/#{menu[:number]}.jpg' alt=统计/>".html_safe%>
       <div class="show_menu">
        <%= "<ul class='small_#{menu[:number]}_ul'>".html_safe%>
          <% menu[:children].each do |ch|%>
          <%unless ch[:name] == menu[:name] %>
            <li><%= link_to ch[:name],ch[:url]%></li>
            <%end%>
          <%end%>
        </ul>
      </div>
    </div>
    <%end%>
    <div class="small_login_menu">
      <%= link_to current_user.name, :controller => "/my_school/users", :action => :show, :id => current_user.id %>|&nbsp;
      <%= link_to "退出", :controller=>"/my_school/users",:action=>:logout%>
    </div>
  </div>
  <div class="logo">
    <img src="<%= @kind.asset_img ? @kind.asset_img.public_filename : '/t/colorful/logo.png' %>" width="100" height="79" alt="Logo"/>
  </div>
  <div class="menu">
    <div class="menu_left">
    </div>
    <div class="menu_right">
    </div>
    <div class="menu_center">
      <ul>
        <% sys_admin_menus("b").each do |menu| %>
          <li><%= link_to  menu[:name].match(/^\//) ? image_tag('/t/colorful/home.png') : menu[:name], menu[:url]%>
             <%if menu[:current]%>
             <div class="menu_selected">
             </div>
          <%end%>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="submenu_center">
      <ul class="home">
        <li>
          <%= link_to "Home","/" %>
        </li>
      </ul>
      <% if flash.any? %>
        <div id="flash-messages">
          <% if flash[:notice] %>
            <div class="alert alert-notice">
              <a class="close" data-dismiss="alert">x</a>
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class="alert">
              <a class="close" data-dismiss="alert">x</a>
              <%= flash[:alert] %>
            </div>
          <% end %>
          <% if flash[:success] %>
            <div class="alert alert-success">
              <a class="close" data-dismiss="alert">x</a>
              <%= flash[:success] %>
            </div>
          <% end %>
          <% if flash[:info] %>
            <div class="alert alert-info">
              <a class="close" data-dismiss="alert">x</a>
              <%= flash[:info] %>
            </div>
          <% end %>
          <% if flash[:error] %>
            <div class="alert alert-error">
              <a class="close" data-dismiss="alert">x</a>
              <%= flash[:error] %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
