<div class="container">
  <div class="bind">
    <div class="logo">
      <img src="<%= @kind.asset_img ? @kind.asset_img.public_filename : '/t/colorful/logo.png' %>" width="100" height="79" alt="Logo"/>
    </div>
    <div class="title">
      <label>
        错误信息
      </label>
    </div>
    <div>
      <% if flash.any? %>
        <div id="flash-messages">
          <% if flash[:notice] %>
            <div class="alert alert-notice">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class="alert">
              <%= flash[:alert] %>
            </div>
          <% end %>
          <% if flash[:success] %>
            <div class="alert alert-success">
              <%= flash[:success] %>
            </div>
          <% end %>
          <% if flash[:info] %>
            <div class="alert alert-info">
              <%= flash[:info] %>
            </div>
          <% end %>
          <% if flash[:error] %>
            <div class="alert alert-error">
              <%= flash[:error] %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>