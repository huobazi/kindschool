<div class="container">
  <div class="bind">
    <div class="logo">
      <img src="<%= @kind.asset_img ? @kind.asset_img.public_filename : '/t/colorful/logo.png' %>" width="100" height="79" alt="Logo"/>
    </div>
    <div class="title">
      <label>
        绑定用户
      </label>
    </div>
    <div class="bind_user">
      <%= form_tag url_for(:action=>:bind_user),:id=>"longin_form" do  %>
        <table class="table table-bordered">
          <tr><td><b>账号</b></td><td><%= text_field_tag :login,"",:placeholder=>"账号", :class => 'login_input'%></td></tr>
          <tr><td><b>密码</b></td><td><%= password_field :password,"",:placeholder=>"登陆密码",:name=>"password", :class => 'password_input'%></td></tr>
        </table>
      <% end %>
      <div class="error_div">
        <% if @user_errors %>
          <label class="error_label">
            <%= @user_errors %>
          </label>
        <% end %>
      </div>
      <div class="login_submit_div">
        <div class="login_submit">
          <a href="###" class="button_xun">&nbsp;</a>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    $(".button_xun").click(function(){
      $("#longin_form").submit();
    })
  })
</script>