<div class="field">
  <label class="field_prompt">评价星数:</label>
  <div id="reward"></div>
  <% if action_name == "new" %>
    <%= f.input :reward, as: :hidden, input_html: {value: 1} %>
  <% else %>
    <%= f.input :reward, as: :hidden, input_html: {value: f.object.reward} %>
  <% end %>
