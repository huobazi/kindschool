<div class="container">
  <%= render :partial => "/modules/colorful/weixin_head" %>
</div>
<div class="message_div">
  <div class="message_title">
    <a href="<%= url_for(:action=>:index) %>" title="返回" class="weixin_return">返回</a>宝宝在园
    <% unless current_user.get_users_ranges[:tp] == :student %>
      <%= link_to("删除",url_for(:controller=>"/weixin/garden_growth_records",:action=>:destroy,:id=>@growth_record.id),:method=>:delete, :confirm => "您确定删除该成长记录吗?", :class => "new_message")%>
      <%= link_to "修改", edit_weixin_garden_growth_record_path(@growth_record), :class => "new_message" %>
    <% end %>
  </div>
  <div class="message_list">
    <ul class="data_list">
      <li class="growth_record">
        <p class="time"><span>开始时间:</span>&nbsp;&nbsp;<span><%= @growth_record.start_at ? @growth_record.start_at.to_short_datetime : "" %></span></p>
        <p class="time"><span>结束时间:</span>&nbsp;&nbsp;<span><%= @growth_record.end_at ? @growth_record.end_at.to_short_datetime : "" %></span></p>
        <p class="creater"><span>创建人:</span><span class="author"><%= @growth_record.creater ? @growth_record.creater.name : "" %></span></p>
        <div class="content">
          <%= simple_format @growth_record.content %>
        </div>
      </li>
    </ul>
    <br/>
  </div>
</div>
<%= render :partial => "/modules/colorful/weixin_menu_navbar"%>
<%= render :partial => "/modules/colorful/weixin_menu_one"%>
