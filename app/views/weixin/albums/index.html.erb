<div class="container">
  <%= render :partial => "/modules/colorful/weixin_head" %>
</div>
<div class="message_div">
  <div class="message_title">
    相册集锦
  </div>
  <div class="message_list">
    <ul class="data_list">
      <% if @albums.blank? %>
        <li><div class="message_content">没有相册。</div></li>
      <% else %>
        <% @albums.each do |album| %>
          <% unless album.album_entries.blank? %>
            <li>
              <a href="<%= url_for(:action=>:show,:id=>album.id) %>" title="查看相册">
                <div>
                   <img src="<%= album.show_main_img ? album.show_main_img.public_filename(:middle) : '/t/colorful/login_img10.png' %>"  alt="<%=album.title%>"/>
                </div>
                <div class="message_content">
                  <label><%= album.title %></label>
                  <label><%= album.send_date ? album.send_date.to_short_datetime : "" %></label>
                </div>
              </a>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
    <br/>
  </div>
  <% unless  @albums.blank? %>
    <div class="message_more">
      <div class="paginate_div">
        <%= paginate @albums, :window => 1%>
      </div>
    </div>
  <% end %>
</div>
<%= render :partial => "/modules/colorful/weixin_menu_navbar"%>
