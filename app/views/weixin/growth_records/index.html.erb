<div class="container">
  <%= render :partial => "/modules/colorful/weixin_head" %>
</div>
<div class="message_div">
  <div class="message_title">
    <a href="<%= weixin_path %>" title="返回" class="weixin_return">返回</a>
    <span>宝宝成长</span><span>></span><span>宝宝在家</span>
  </div>
  <div class="message_list">
    <% unless current_user.get_users_ranges[:tp] == :teachers %>
      <div class="btn-new-wrap">
        <%= link_to "添加成长记录", new_weixin_growth_record_path, :class => "btn btn-warning btn-large btn-block" %>
      </div>
    <% end %>
    <ul class="data_list clearfix">
      <% if @growth_records.blank? %>
        <li><div class="message_content">还没有成长记录</div></li>
      <% else %>
        <% @growth_records.each do |growth_record| %>
          <li class="show" data-id="<%= growth_record.id %>">
            <p class="title"><span class="name"><%= growth_record.student_info_label %></span>
              <span>
                <% if current_user.id == growth_record.creater_id %>
                  <%= growth_record.unread_comment_count %><img src="/t/colorful/has_comments.png" />
                <% end %>
              </span>
            </p>
            <p class="info"><span><%= growth_record.start_at.try(:to_short_datetime) %></span>&nbsp;~&nbsp;<span><%= growth_record.end_at.try(:to_short_datetime) %></span>&nbsp;由<span class="author"><%= growth_record.try(:creater).try(:name) %></span>创建于&nbsp;<span><%= growth_record.created_at.try(:to_long_datetime) %></span>
            
            </p>
              <%= simple_format growth_record.content %>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
    <br/>
  </div>
  <% unless  @growth_records.blank? %>
    <div class="message_more">
      <div class="paginate_div">
        <%= paginate @growth_records, :window => 1%>
      </div>
    </div>
  <% end %>
</div>
<%= render :partial => "/modules/colorful/weixin_menu_navbar"%>
<%= render :partial => "/modules/colorful/weixin_menu_one"%>

<script type="text/javascript">
$(".show").each(function() {
  $(this).click(function() {
    window.location.href = "growth_records/" + $(this).attr("data-id")
  })
})
</script>
