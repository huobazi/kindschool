<% f = form %>
<script type="text/javascript">
  jQuery(function() {
    $('#activity_start_at').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });
    $('#activity_end_at').datepicker({
      language: "zh-CN",
      format:"yyyy-mm-dd"
    });

  });
</script>
<div class="field" id="title_field">
  <label class="field_prompt" for="activity_title">标题</label>
  <%= f.text_area :title, :class => "text-content" %>
</div>
<div class="field">
  <div id="start_at_container">
    <label class="field_prompt" for="activity_start_at">开始时间:</label>
    <% if action_name == "new" %>
      <%= f.text_field :start_at, :required => true, :class => "text-content" %>
    <% else %>
      <%= f.text_field :start_at, :required => true, :class => "text-content", :value => @activity.start_at.to_short_datetime  %>
    <% end %>
  </div>
  <div id="end_at_container">
    <label class="field_prompt" for="activity_end_at">结束时间:</label>
    <% if action_name == "new" %>
      <%= f.text_field :end_at, :required => true, :class => "text-content" %>
    <% else %>
      <%= f.text_field :end_at, :required => true, :class => "text-content", :value => @activity.end_at.to_short_datetime %>
    <% end %>
  </div>
</div>

<div class="field" id="content_field">
  <label class="field_prompt" for="activity_content">内容:</label>
  <%= f.text_area :content, :class => "text-content" %>
</div>
<div class="field" id="note_field">
  <label class="field_prompt" for="activity_content">描述:</label>
  <%= f.text_area :note, :class => "text-content" %>
</div>
<%= f.input :creater_id, :as => :hidden %>
<%= f.input :kindergarten_id, :as => :hidden %>
<%= f.button :submit, :class => "btn" %>

<script type="text/javascript">
$(document).ready(function() {
  var flag = []
  var time_re = /\d{4}-\d{2}-\d{2}/;
  $("input[name='commit']").click(function(){
    if( !time_re.test($("#activity_start_at").val()) || $("#activity_start_at").val().length == 0 ) {
      if( $("#start_at_container").children("span.help").length == 0 ) {
        $("<span class='help'>时间格式不对或为空</span>").insertBefore($("#activity_start_at"))
      }
      flag.push(true);
    } else {
      if($("#start_at_container").children("span.help").length > 0) {
        $("#start_at_container span.help").remove()
      }
      flag.push(false);
    }
    if( !time_re.test($("#activity_end_at").val()) || $("#activity_end_at").val().length == 0 ) {
      if( $("#end_at_container").children("span.help").length == 0 ) {
        $("<span class='help'>时间格式不对或为空</span>").insertBefore($("#activity_end_at"))
      }
      flag.push(true);
    } else {
      if($("#end_at_container").children("span.help").length > 0) {
        $("#end_at_container span.help").remove()
      }
      flag.push(false);
    }
    if ( $("#activity_start_at").val().length > 0 && $("#activity_end_at").val().length > 0 && time_re.test($("#activity_start_at").val()) && time_re.test($("#activity_end_at").val()) ) {
      if( Date.parse($("#activity_end_at").val()) < Date.parse($("#activity_start_at").val()) ) {
        if( $("#end_at_container").children("span.help").length == 0 ) {
          $("<span class='help'>结束时间必须大于开始时间</span>").insertBefore($("#activity_end_at"))
        }
        flag.push(true);
      } else {
        if($("#end_at_container").children("span.help").length > 0) {
          $("#end_at_container span.help").remove()
        }
        flag.push(false);
      }
    }

    if( $("#activity_content").val().length < 5 ) {
      if( $("#content_field").children("span.help").length == 0 ) {
        $("<span class='help'>长度太短必须5个字符以上</span>").insertBefore($("#activity_content"))
      }
      flag.push(true)
    } else {
      if( $("#content_field").children("span.help").length > 0 ) {
        $("#content_field span.help").remove();
      }
    }
    if( $("#activity_title").val().length < 3 ) {
      if( $("#title_field").children("span.help").length == 0 ) {
        $("<span class='help'>长度太短必须3个字符以上</span>").insertBefore($("#activity_title"))
      }
      flag.push(true)
    } else {
      if( $("#title_field").children("span.help").length > 0 ) {
        $("#title_field span.help").remove();
      }
    }
    for( i in flag ) {
      if(flag[i] == true) {
        flag.length = 0;
        return false;
      }
    }
})

})
</script>
