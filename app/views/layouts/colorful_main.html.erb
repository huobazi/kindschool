    <div id="helpDivLogo" style="Z-INDEX: 100; LEFT: 2px; WIDTH: 59px; POSITION: absolute; TOP: 43px; HEIGHT: 61px;visibility: visible;">
<%#*style="position: absolute;right: 0;"%>
      <a href="###" id="user_show_dialog"  class="blue">
